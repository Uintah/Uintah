<?xml version="1.0" encoding="iso-8859-1"?>
<Uintah_specification>

  <Meta>
    <title>Diffusion Test 1 in 1D</title>
  </Meta>

  <SimulationComponent type="amrmpm" />

  <Time>
     <maxTime>4</maxTime>
     <initTime>0.0</initTime>
     <delt_min>.005</delt_min>
     <delt_max>0.005</delt_max>
     <max_Timesteps>100</max_Timesteps>
     <timestep_multiplier>0.4</timestep_multiplier>
  </Time>
  <DataArchiver>
    <filebase>diffusion_test1_1D.uda</filebase>
    <outputTimestepInterval>1</outputTimestepInterval>
    <save label="p.x"/>
    <save label="p.particleID"/>
    <save label="p.velocity"/>
    <save label="p.mass"/>
    <save label="p.volume"/>
    <save label="p.scalefactor" />
    <save label="p.concentration" />
    <save label="g.mass"/>
    <save label="g.concentration" />
    <save label="g.velocity"/>
    <!--<save label="p.hydroStress"/> -->
    <!--<save label="maxHydroStress1" />-->
    <!--<save label="minHydroStress1" />-->
  </DataArchiver>

  <MPM>
      <time_integrator>explicit</time_integrator>
      <interpolator>linear</interpolator>
      <scalar_diffusion>explicit</scalar_diffusion>
  </MPM>

  <AMR>
     <useLockStep> true </useLockStep>
     <MPM>
     </MPM>
   </AMR>

  <PhysicalConstants>
    <gravity>[0.0, 0.0, 0.0]</gravity>
  </PhysicalConstants>

  <MaterialProperties>
       <MPM>
         <material name="electrolyte">
           <density>1000</density> <!-- micrograms/mm^3 -->
           <constitutive_model type="water"> 
             <bulk_modulus>0.0</bulk_modulus> <!-- micrograms/mm microsecond^2 -->
             <viscosity>0.0</viscosity> <!-- micrograms / mm microsecond -->
             <gamma>0.0</gamma>
           </constitutive_model>
           <thermal_conductivity>0.0</thermal_conductivity>
           <specific_heat>5</specific_heat>
           <diffusion_model type = "jg">
             <diffusivity>       1e-1   </diffusivity>
           </diffusion_model>
           <geom_object>
             <box label = "boxE">
               <min>[0.0, 0.0, 0.0]</min>
               <max>[1.0, 0.05, 0.05]</max> <!-- units in mm -->
             </box>
             <res>[2,2,2]</res>
             <velocity>[0.0,0.0,0.0]</velocity>
             <temperature>0</temperature>
             <concentration> 0 </concentration>
           </geom_object>
         </material>

         <diffusion_interface>
           <type>null</type>
         </diffusion_interface>
         <contact>
           <type>single_velocity</type>
         </contact>
      </MPM>
    </MaterialProperties>
       
  <Grid>
    <BoundaryConditions>
      <Face side = "x-">
        <BCType id = "all" label = "SD-Type"  var = "Dirichlet">
                              <value> 1.0  </value>
        </BCType>
      </Face>
      <Face side = "x+">
        <BCType id = "all" label = "SD-Type"  var = "Dirichlet">
                              <value> 0.0  </value>
        </BCType>
      </Face>
      <Face side = "y-">
        <BCType id = "all" label = "SD-Type"  var = "Neumann">
                              <value> 0.0  </value>
        </BCType>
      </Face>                  
      <Face side = "y+">
        <BCType id = "all" label = "SD-Type"  var = "Neumann">
                              <value> 0.0  </value>
        </BCType>
      </Face>
      <Face side = "z-">
        <BCType id = "all" label = "SD-Type"  var = "Neumann">
                              <value> 0.0  </value>
        </BCType>
      </Face>                  
      <Face side = "z+">
        <BCType id = "all" label = "SD-Type"  var = "Neumann">
                              <value> 0.0  </value>
        </BCType>
      </Face>
    </BoundaryConditions>
    <Level>
      <Box label="1">
        <lower>[0.0, 0.0, 0.0]   </lower>
        <upper>[1.0, 0.05, 0.05]</upper>
        <resolution>[20, 1, 1]        </resolution>
        <extraCells>[0, 0, 0]          </extraCells>
        <patches>[1,1,1]               </patches>
      </Box>
    </Level>
  </Grid>

</Uintah_specification>

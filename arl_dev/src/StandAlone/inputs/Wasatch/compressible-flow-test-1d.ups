<?xml version="1.0"?>
<Uintah_specification>
  <Meta>
    <title>Compressible flow in 1D</title>
  </Meta>
  <SimulationComponent type="wasatch"/>
  <Solver type="hypre"/>
  <Wasatch>
    <TimeIntegrator> FE </TimeIntegrator>
    <Density method="COMPRESSIBLE">
      <NameTag name="density"/>
    </Density>
    <!-- Set the initial condition on temperature -->
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="T"/>
      <GaussianFunction amplitude="100.0" deviation="1.0" mean="0.0" baseline="273.0">
        <NameTag name="XSVOL"/>
      </GaussianFunction>
    </BasicExpression>
    <!-- Set the initial condition expression for x-velocity -->
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="u"/>
      <Constant>0</Constant>
    </BasicExpression>
    <!-- Set the initial condition expression for pressure - currently pressure has to be name pressure -->
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="pressure"/>
      <Constant>101325</Constant>
    </BasicExpression>
    <!-- Set the molecular weight - needed both on initial condition and advance solution -->
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="MW"/>
      <Constant>0.028966</Constant>
    </BasicExpression>
    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="MW"/>
      <Constant>0.028966</Constant>
    </BasicExpression>
    <!-- specify the viscosity -->
    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="viscosity"/>
      <Constant>1.0e-5</Constant>
    </BasicExpression>
    
    <!-- Momentum transport equations -->
    <MomentumEquations>
      <X-Velocity>u</X-Velocity>
      <X-Momentum>x-mom</X-Momentum>
      <Viscosity>
        <NameTag name="viscosity"/>
      </Viscosity>    
      <EnergyEquation>
        <SolutionVariable>rhoet</SolutionVariable>
        <PrimitiveVariable>et</PrimitiveVariable>
        <Temperature>
          <NameTag name="T"/>
        </Temperature>
        <MolecularWeight>
          <NameTag name="MW"/>
        </MolecularWeight>
        <DiffusiveFlux direction="X" coefficient="0.001"/>
        <ConvectiveFlux direction="X" method="CENTRAL">
          <AdvectiveVelocity>
            <NameTag name="u"/>
          </AdvectiveVelocity>
        </ConvectiveFlux>
      </EnergyEquation>
    </MomentumEquations>
  </Wasatch>
  <Time>
    <maxTime>5.0</maxTime>
    <initTime>0.0</initTime>
    <delt_min>1e-7</delt_min>
    <delt_max>1e-7</delt_max>
    <max_Timesteps> 200 </max_Timesteps>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>
  <DataArchiver>
    <filebase>compressible-1d-test.uda</filebase>
    <outputTimestepInterval>10</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle="2" timestepInterval="20"/>
    <save label="T"/>
    <save label="u"/>
    <save label="pressure"/>
    <save label="density"/>
    <save label="et"/>
    <save label="rhoet"/>
  </DataArchiver>
  <Grid>
    <BoundaryConditions>
      <DefaultMaterial>all</DefaultMaterial>
    </BoundaryConditions>
    <Level>
      <Box label="1">
        <lower>[-5,-5,0]</lower>
        <upper>[5,5,1]</upper>
        <resolution>[200,1,1]</resolution>
        <patches>[4,1,1]</patches>
      </Box>
      <periodic>[1,1,1]</periodic>
    </Level>
  </Grid>
</Uintah_specification>

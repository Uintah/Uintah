<Uintah_specification>

  <Meta>
    <title> Channel Flow with Pressure Outlet at x+ </title>
  </Meta>

  <SimulationComponent type="wasatch"/>
   <Solver type="hypre"/>
  <Wasatch>

	<BCExpression type="XVOL">
		<TaskList>initialization advance_solution</TaskList>
		<NameTag name="parabolic-inlet" state="STATE_NONE"/>
      <ParabolicFunction type="CENTERED">
         <Centered x0="0.5" f0="1" h="0.5"/>
         <NameTag name="YXVOL" state="STATE_NONE"/>
       </ParabolicFunction>
	</BCExpression>

  <!-- PostProcessingExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="xvelcc" state="STATE_NONE" />
      <InterpolateExpression type="XVOL">
          <NameTag name="u" state="STATE_NONE"/>
      </InterpolateExpression>
  </PostProcessingExpression>

  <PostProcessingExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="yvelcc" state="STATE_NONE" />
      <InterpolateExpression type="YVOL">
          <NameTag name="v" state="STATE_NONE"/>
      </InterpolateExpression>
  </PostProcessingExpression>
  
  <ForceOnGraph tasklist="advance_solution">
    <NameTag name="xvelcc" state="STATE_NONE" />
    <NameTag name="yvelcc" state="STATE_NONE" />
  </ForceOnGraph -->

    <Density>
      <Constant value="1.0" name="density"/>
    </Density>
    

    <!-- Set the initial condition expression for x-momentum -->
    <BasicExpression type="XVOL">
       <TaskList>initialization</TaskList>
       <NameTag name="u" state="STATE_NONE"/>
       <Constant>0.0</Constant>
    </BasicExpression>

    <BasicExpression type="YVOL">
       <TaskList>initialization</TaskList>
       <NameTag name="v" state="STATE_NONE"/>
       <Constant>0.0</Constant>
    </BasicExpression>
               
    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="viscosity" state="STATE_NONE"/>
      <Constant>0.01</Constant>
    </BasicExpression>

    <!-- Momentum transport equations -->
    <MomentumEquations>
 	
      <X-Velocity>u</X-Velocity>
      <X-Momentum>x-mom</X-Momentum>
      <Y-Velocity>v</Y-Velocity>
      <Y-Momentum>y-mom</Y-Momentum>
      <Viscosity>
        <NameTag name="viscosity" state="STATE_NONE"/>
      </Viscosity>
      
      <Pressure>
        <!-- ReferencePressure value="0.0">
              <ReferenceCell>[0,0,0]</ReferenceCell>
        </ReferencePressure -->
        <Use3DLaplacian>    false</Use3DLaplacian>
        <Parameters>
 	 	 	 	 	 	 <skip>1</skip>
            <solver>         cg      </solver>
            <preconditioner> pfmg    </preconditioner>
            <tolerance>      1e-15  </tolerance>
            <maxiterations>  200    </maxiterations>
            <relax_type>     2       </relax_type>
           </Parameters>
      </Pressure>
    </MomentumEquations>


  </Wasatch>


  <Time>
    <maxTime>100</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.001</delt_min>
    <delt_max>0.001</delt_max>
    <max_Timesteps>5</max_Timesteps>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>


  <DataArchiver>
    <filebase>bc-parabolic-inlet-channel-flow-test.uda</filebase>
    <outputTimestepInterval>1</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle="2" interval="0.001"/>
    <compression>gzip</compression>
    <save label="x-mom"/>
    <save label="y-mom"/>
    <save label="pressure"/>
    <save label="dilatation"/>
  </DataArchiver> 

  <Grid>
      <BoundaryConditions>
      <DefaultMaterial>all</DefaultMaterial>
      <!-- BOUNDARY CONDITIONS FOR MOMENTUM -->
      <Face side="x-" type="Velocity">
        <BCType label="u" var="Dirichlet" value="parabolic-inlet"/>
        </Face>
      <Face side="x+" type="Outflow"/>
      <Face side="y-" type="Wall"/>
      <Face side="y+" type="Wall"/>
      </BoundaryConditions>
      <Level>
      <Box label="1">
        <lower>[0, 0,  0]</lower>
        <upper>[6, 1, 0.01]</upper>
        <!-- extraCells>[1,1,0]</extraCells -->
        <resolution>[30,10,2]</resolution>
        <patches>[3,2,1]</patches>
      </Box>
      <periodic>[0,0,1]</periodic>
    </Level>
  </Grid>

</Uintah_specification>

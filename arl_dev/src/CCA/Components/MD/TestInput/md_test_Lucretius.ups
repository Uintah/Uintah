<?xml version='1.0' encoding='ISO-8859-1' ?>

<Uintah_specification>

   <Meta>
       <title>MD Component Electrostatics Test</title>
   </Meta>

   <SimulationComponent type="md" />

   <!--____________________________________________________________________-->
   <!--      T  I  M  E     V  A  R  I  A  B  L  E  S                      -->
   <!--____________________________________________________________________-->

   <Time>
       <maxTime>10.0</maxTime>
       <initTime>0.0</initTime>
       <delt_min>0.25</delt_min>
       <delt_max>0.25</delt_max>
       <delt_init>0.25</delt_init>
       <max_Timesteps>2</max_Timesteps>
       <timestep_multiplier>1</timestep_multiplier>

   </Time>
   
   
    <!--____________________________________________________________________-->
    <!--   O  U  P  U  T     V  A  R  I  A  B  L  E  S                      -->
    <!--____________________________________________________________________-->
    
   <DataArchiver>
       <filebase>md_test.uda</filebase>
       <outputInterval>0</outputInterval>
       <!--outputInterval>1</outputInterval-->
       <save label = "p.x"/>
       <save label = "p.ID"/>
       <save label = "p.v"/>
       <!--checkpoint cycle = "2" interval = "1"/-->
       <checkpoint cycle = "0" interval = "0"/>
   </DataArchiver>

    <!--____________________________________________________________________-->
    <!--   L O A D - B A L A N C E R     O P T I O N S                      -->
    <!--____________________________________________________________________-->
    
    <!--
   <LoadBalancer type="DLB">
     <timestepInterval>2</timestepInterval>
     <dynamicAlgorithm>patchFactorParticles</dynamicAlgorithm>
   </LoadBalancer>
   -->


    <!--____________________________________________________________________-->
    <!--   S I M U LA T I O N     O P T I O N S                             -->
    <!--____________________________________________________________________-->
    
   <MD>
     <Forcefield type="Lucretius">
<!--       <coordinateFile>NaCl_coords.inp</coordinateFile>
       <forcefieldFile>NaCl_ff.dat</forcefieldFile> -->
       <coordinateFile>2Particle_coords.inp</coordinateFile>
           <forcefieldFile>2Particle_ff.dat</forcefieldFile>
     </Forcefield>

     <System ensemble="NVE">
       <unitCell format="Isotropic">
         <boxSize>50.0</boxSize>
<!--       <boxSize>44.2</boxSize> -->
       </unitCell>
       <cutoffRadius>10.0</cutoffRadius>
     </System>

     <Integrator type="velocity">
       <timestep>0.25</timestep>
       <numberSteps>10</numberSteps>
     </Integrator>

     <Electrostatics type="none">
       <ewaldBeta>0.25</ewaldBeta>
       <kGrids>[32,32,32]</kGrids>
       <splineOrder>6</splineOrder>
       <cutoffRadius>12.0</cutoffRadius>
       <polarizable enabled="true">
         <polarizationTolerance>1.0e-9</polarizationTolerance>
          <maxIterations>100</maxIterations>
       </polarizable>
     </Electrostatics>
   </MD>


    <!--____________________________________________________________________-->
    <!--   G R I D     S P E C I F C A T I O N                              -->
    <!-- Fourier Stress = -831.6806770901319 19.51180519795573 762.8365815391901 19.51180519795573 278.0869777731788 11.23913303166436 762.8365815391901 11.23913303166436 -828.5813424497369 -->
    <!--____________________________________________________________________-->
    
    <Grid>
       <Level>
           <Box label = "1">
              <lower>[0,0,0]</lower>
              <upper>[50,50,50]</upper>
              <resolution>[50,50,50]</resolution>
              <patches>[1,1,1]</patches>
           </Box>
           <periodic>[1,1,1]</periodic>
       </Level>
    </Grid>

</Uintah_specification>


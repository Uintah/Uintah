\begin_inset Formula 
\begin{equation}
u=\frac{\partial\psi}{\partial y}=U-\frac{\Gamma}{R^{2}}(y-y_{0})\exp\left(-\frac{r^{2}}{2R^{2}}\right)
\end{equation}

\end_inset

and
\begin_inset Formula 
\begin{equation}
v=-\frac{\partial\psi}{\partial x}=V+\frac{\Gamma}{R^{2}}(x-x_{0})\exp\left(-\frac{r^{2}}{2R^{2}}\right).
\end{equation}

\end_inset


\end_layout


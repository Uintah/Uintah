        </BCType>
        <BCType id = "0"   label = "abskg"     var = "Neumann">
                           <value> 0. </value>
        </BCType>
      </Face>
    </BoundaryConditions>
    
    <Level>
      <Box label = "0">                              
         <lower>      [0,0,0]     </lower>         
         <upper>      [1, 1, 1]   </upper>         
         <resolution> [41,41,41]  </resolution>    
         <patches>    [1,1,1]     </patches> 
         <extraCells> [1,1,1]     </extraCells>      
      </Box>                                         
    </Level>

    <Level>
      <Box label = "1">                              
         <lower>      [ 0,0,0]      </lower>         
         <upper>      [1, 1, 1]     </upper>         
         <resolution> [164,164,164] </resolution>        
         <patches>    [1,1,1]       </patches>   
         <extraCells> [1,1,1]       </extraCells>         
      </Box>                                         
    </Level>

  </Grid>
  <!--__________________________________-->
  <AMR>
    <useLockStep> true </useLockStep>
    <RMCRT>
      <orderOfInterpolation>    1    </orderOfInterpolation>
      <manualGrid>             true  </manualGrid>
      <CoarseLevelRMCRTMethod> true  </CoarseLevelRMCRTMethod>
      <multiLevelRMCRTMethod>  false </multiLevelRMCRTMethod>
    </RMCRT>
    

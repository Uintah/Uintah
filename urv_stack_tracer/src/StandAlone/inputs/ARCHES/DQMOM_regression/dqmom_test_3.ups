<?xml version="1.0" encoding="iso-8859-1"?>
<!-- DOCTYPE Uintah_specification SYSTEM "input.dtd" -->
<!-- @version: -->
<Uintah_specification>
  <Meta>
    <title>DQMOM/Scalar Test #3</title>
  </Meta>

  <SimulationComponent type="arches"/>

  <Solver type="hypre"/>
  <Time>
    <maxTime>.20</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.00001</delt_min>
    <delt_max>5</delt_max>
    <timestep_multiplier>0.5</timestep_multiplier>
  </Time>

  <DataArchiver>
    <filebase>dqmom_test_3.uda</filebase>
    <outputInterval>0.01</outputInterval>
    <outputInitTimestep/>
<!--    <save label="totalKineticEnergy"/>  FIXME, RT fails with this enabled-->
    <save label="totalummsLnError"/>
    <save label="totalvmmsLnError"/>
    <save label="totalummsExactSol"/>
    <save label="totalvmmsExactSol"/>
    <save label="pressurePS"/>
    <save label="scalarSP"/>
    <save label="CCVelocity"/>
    <save label="uVelocitySPBC"/>
    <save label="vVelocitySPBC"/>
    <save label="continuityResidual"/>
    <save label="velocityDivergence"/>
<!-- EXTRA SCALARS -->
    <save label="scalar_0"/>
    <save label="scalar_1"/>
<!-- DQMOM Vars -->
    <save label="length_qn0"/>
    <save label="length_qn1"/>
    <save label="length_qn2"/>
    <save label="length_qn0_icv"/>
    <save label="length_qn0_src"/>
    <save label="mass_qn0"/>
    <save label="mass_qn1"/>
    <save label="mass_qn2"/>
    <save label="mass_qn0_icv"/>
    <save label="mass_qn0_src"/>
    <save label="grow_qn0"/>
    <save label="grow_qn1"/>
    <save label="grow_qn2"/>
    <save label="shrink_qn0"/>
    <save label="shrink_qn1"/>
    <save label="shrink_qn2"/>
    <checkpoint cycle="2" interval="0.05"/>
    <compression>gzip</compression>
  </DataArchiver>

  <Grid>
    <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[1.0,1.0,3.0]</upper>
        <resolution>[8,8,8]</resolution>
        <extraCells>[0,0,0]</extraCells>
        <patches>[1,1,1]</patches>
      </Box>
      <periodic>[1,1,1]</periodic>
    </Level>
  </Grid>

  <PhysicalConstants>
    <gravity>[0,0,0]</gravity>
    <reference_point>[0,0,0]</reference_point>
    <viscosity>0.0002</viscosity>
  </PhysicalConstants>

  <CFD>
<!-- ARCHES specification -->
    <ARCHES>

      <MMS whichMMS="almgrenMMS">
        <mmsErrorType>L2</mmsErrorType>
        <almgrenMMS>
<!--Note: This viscosity needs to be set twice for now, both here
                    and in the PhysicalConstant section. -->
          <viscosity>0.0002</viscosity>
          <amplitude>1.0</amplitude>
        </almgrenMMS>
      </MMS>

<!-- TIME INTEGRATOR -->
      <TimeIntegrator>
        <ExplicitIntegrator order="second"/>
      </TimeIntegrator>


<!-- EXTRA SCALARS -->
      <TransportEqns>
        <Eqn label="scalar_0" type="CCscalar">
<!-- diffusive scalar -->
          <doDiff>true</doDiff>
          <doConv>true</doConv>
          <conv_scheme>upwind</conv_scheme>
          <initialization type="step">
            <step_direction>x</step_direction>
            <step_value>1.0</step_value>
            <step_start>0</step_start>
            <step_end>.5</step_end>
          </initialization>
        </Eqn>

        <Eqn label="scalar_1" type="CCscalar">
<!-- non-diffusive scalar -->
          <doDiff>false</doDiff>
          <doConv>true</doConv>
          <conv_scheme>super_bee</conv_scheme>
          <initialization type="step">
            <step_direction>x</step_direction>
            <step_value>1.0</step_value>
            <step_start>0</step_start>
            <step_end>.5</step_end>
          </initialization>
        </Eqn>

      </TransportEqns>

<!-- DQMOM -->
      <DQMOM type="weightedAbs">
        <number_quad_nodes>3</number_quad_nodes>
        <save_moments>false</save_moments>
        <LinearSolver>
          <tolerance>1.0e-10</tolerance>
          <type>Optimize</type>
          <Optimization>
            <Optimal_abscissas>[1,1,-1,1,-1,1]</Optimal_abscissas>
          </Optimization>
        </LinearSolver>
<!-- particle models -->
        <VelModel type="Balachandar">
          <kinematic_viscosity>0.00001</kinematic_viscosity>
          <rho_ratio>1000</rho_ratio>
          <regime>2</regime>
          <L>.4</L>
          <eta>10</eta>
        </VelModel>

        <Models>
          <model label="grow" type="ConstantModel">
            <constant>.01</constant>
          </model>
          <model label="shrink" type="ConstantModel">
            <constant>-.01</constant>
          </model>
        </Models>

<!-- Weights test the uniform constant initialization mechanism -->
        <Weights>
<!-- w [=] #/m^3 -->
          <doDiff>false</doDiff>
          <doConv>true</doConv>
          <conv_scheme>super_bee</conv_scheme>
          <initialization type="constant">
            <constant>0.2</constant>
          </initialization>
          <scaling_const>1</scaling_const>
        </Weights>

        <Ic label="length">
<!-- l [=] m -->
          <doDiff>false</doDiff>
          <doConv>true</doConv>
          <conv_scheme>super_bee</conv_scheme>
          <initialization type="env_step">
            <step_direction>x</step_direction>
            <step_start>0.</step_start>
            <step_end>.5</step_end>
            <env_step_value qn="0" value="1.0"/>
            <env_step_value qn="1" value=".50"/>
            <env_step_value qn="2" value=".25"/>
          </initialization>
          <model label="grow"/>
          <scaling_const>1</scaling_const>
        </Ic>

        <Ic label="mass">
<!-- l [=] m -->
          <doDiff>false</doDiff>
          <doConv>true</doConv>
          <conv_scheme>super_bee</conv_scheme>
          <initialization type="env_step">
            <step_direction>x</step_direction>
            <step_start>0.</step_start>
            <step_end>.5</step_end>
            <env_step_value qn="0" value="1.0"/>
            <env_step_value qn="1" value=".50"/>
            <env_step_value qn="2" value=".25"/>
          </initialization>
          <model label="shrink"/>
          <scaling_const>1</scaling_const>
        </Ic>

        <Moment>
          <m>[0,0]</m>
        </Moment>

        <Moment>
          <m>[1,0]</m>
        </Moment>

        <Moment>
          <m>[2,0]</m>
        </Moment>

        <Moment>
          <m>[0,1]</m>
        </Moment>

        <Moment>
          <m>[0,2]</m>
        </Moment>

        <Moment>
          <m>[1,1]</m>
        </Moment>

        <Moment>
          <m>[0,3]</m>
        </Moment>

        <Moment>
          <m>[1,2]</m>
        </Moment>

        <Moment>
          <m>[2,1]</m>
        </Moment>

      </DQMOM>

      <Turbulence model="smagorinsky">
        <turbulentPrandtlNumber>0.4</turbulentPrandtlNumber>
        <cf>0.0</cf>
        <fac_mesh>1.0</fac_mesh>
        <filterl>0.000001</filterl>
        <var_const>0.1</var_const>
      </Turbulence>

      <Properties>
        <use_mixing_model>false</use_mixing_model>
        <ColdFlowMixingModel>
          <Stream>
            <density>1.00</density>
            <temperature>298</temperature>
          </Stream>
          <Stream>
            <density>1.00</density>
            <temperature>298</temperature>
          </Stream>
        </ColdFlowMixingModel>
      </Properties>

<!--
      <BoundaryConditions>
      </BoundaryConditions>

-->
      <ExplicitSolver>
        <initial_dt>1</initial_dt>
        <variable_dt>true</variable_dt>
        <PressureSolver>
          <Parameters>
            <solver>           cg     </solver>
            <preconditioner>  pfmg    </preconditioner>
            <tolerance>      1.0e-10  </tolerance>
            <maxiterations>    75     </maxiterations>
            <skip>              1     </skip>
          </Parameters>
        </PressureSolver>

        <MomentumSolver>
          <convection_scheme>central</convection_scheme>
        </MomentumSolver>

        <MixtureFractionSolver>
          <convection_scheme>central-upwind</convection_scheme>
        </MixtureFractionSolver>

      </ExplicitSolver>
    </ARCHES>

  </CFD>

</Uintah_specification>

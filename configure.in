    SCI_CHECK_LIB($i/src/vdt/VDT/lib/$ad,vdt,VDT_triangulate, $MISC_LIB_DIR_FLAG $MISC_LIB_FLAG,,not-optional)
    if test -e "$LIB_DIR_VDT/../../src/vdt.h"; then

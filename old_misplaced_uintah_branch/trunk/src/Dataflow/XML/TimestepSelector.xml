<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component PUBLIC '-//SCIRun/Component DTD' '../../SCIRun/Dataflow/XML/component.dtd'>
<?xml-stylesheet href="component.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<component name="TimestepSelector" category="Selectors">
  <overview>
    <authors>
      <author>James Bigler</author>
      <author>Kurt Zimmerman</author>
    </authors>
    <summary>Specify a time slice of Uintah Data Archive
    data.</summary> 
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>Data Archive</name>
        <datatype>Uintah::Archive</datatype>
      </port>
    </inputs>
    <outputs>
      <port>
        <name>Archive Timestep</name>
        <datatype>Uintah::Archive</datatype>
      </port>
      <port>
	<name>Geometry</name>
	<datatype>SCIRun::Geometry</datatype>
      </port>
      <port>
	<name>Timestep</name>
	<datatype>SCIRun::Matrix</datatype>
      </port>
   </outputs>
  </io>
</component>

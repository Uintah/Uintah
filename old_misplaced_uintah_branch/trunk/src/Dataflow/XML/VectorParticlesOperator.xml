<?cocoon-process type="xslt"?>

<component name="VectorParticlesOperator" category="Operators">
  <overview>
    <authors>
      <author>Wayne Witzel</author>
    </authors>
    <summary>Create a scalar particle field from a vector particle
    field.</summary> 
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>Vector Particles</name>
        <datatype>Uintah::VectorParticles</datatype>
      </port>
     </inputs>
    <outputs>
      <port>
	<name>Scalar Particles</name>
	<datatype>Uintah::ScalarParticles</datatype>
      </port>
    </outputs>
  </io>
</component>

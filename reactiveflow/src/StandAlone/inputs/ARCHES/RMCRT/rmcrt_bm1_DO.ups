<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- @version: -->
<Uintah_specification>

  <Meta>
    <title>"rmcrt benchmark 1 "</title>
  </Meta>

  <SimulationComponent type="arches"/>
  <Solver type="hypre"/>

  <Time>
    <maxTime>       5.0     </maxTime>
    <initTime>      0.0     </initTime>
    <delt_min>      1.0e-6  </delt_min>
    <delt_max>      0.1     </delt_max>
    <max_Timesteps> 4       </max_Timesteps>
    <timestep_multiplier>0.4</timestep_multiplier>
  </Time>
  
  <AMR>
     <useLockStep> true </useLockStep>
  </AMR>
  
  <!--__________________________________-->
  <DataArchiver>
    <filebase>rmcrt_bm1_DO.uda</filebase>
    <outputInitTimestep/>
    <outputTimestepInterval>1</outputTimestepInterval>
    <save label="divQ"      levels="-1"/>
    <save label="radiation_temperature"  levels = "-1"/>
    <!--<save label="abskg" />-->
    <save label="sigmaT4" />
    <save label="cellType" />
    
    <checkpoint cycle = "2" timestepInterval = "2"/>
  </DataArchiver>
  
  <!--__________________________________-->
  <Grid>
    <BoundaryConditions>
      <Face side="x-" name="inlet">
        <BCType id="all" label="x- wall" var="WallBC">
          <value>0</value>
        </BCType>
        <BCType id="all" label="mixture_f"      var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType id="all" label="enthalpy"       var="Neumann">
          <value>0.0</value>
        </BCType>
        <!-- for RMCRT-->
        <BCType id="all"  label = "radiation_temperature" var="Dirichlet">
          <value> 0. </value>
        </BCType>
        <BCType id="all"  label = "abskg"       var="Dirichlet">
          <value> 1. </value>
        </BCType>
      </Face>
      <Face side="x+" name="inlet">
        <BCType id="all" label="x+ wall" var="WallBC">
          <value>0</value>
        </BCType>
        <BCType id="all" label="mixture_f"      var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType id="all" label="enthalpy"       var="Neumann">
          <value>0.0</value>
        </BCType>
        <!-- for RMCRT-->
        <BCType id="all"  label = "radiation_temperature" var="Dirichlet">
          <value> 0. </value>
        </BCType>
        <BCType id="all"  label = "abskg"       var="Dirichlet">
          <value> 1. </value>
        </BCType>
      </Face>
      <Face side="y-" name="inlet">
        <BCType id="all" label="y- wall" var="WallBC">
          <value>0</value>
        </BCType>
        <BCType id="all" label="mixture_f"      var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType id="all" label="enthalpy"       var="Neumann">
          <value>0.0</value>
        </BCType>
        <!-- for RMCRT-->
        <BCType id="all"  label = "radiation_temperature" var="Dirichlet">
          <value> 0. </value>
        </BCType>
        <BCType id="all"  label = "abskg"       var="Dirichlet">
          <value> 1. </value>
        </BCType>
      </Face>
      <Face side="y+" name="inlet">
        <BCType id="all" label="y+ wall" var="WallBC">
          <value>0</value>
        </BCType>
        <BCType id="all" label="mixture_f"      var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType id="all" label="enthalpy"       var="Neumann">
          <value>0.0</value>
        </BCType>
        <!-- for RMCRT-->
        <BCType id="all"  label = "radiation_temperature" var="Dirichlet">
          <value> 0. </value>
        </BCType>
        <BCType id="all"  label = "abskg"       var="Dirichlet">
          <value> 1. </value>
        </BCType>
      </Face>
      <Face side="z-" name="inlet">
        <BCType id="all" label="z- wall" var="WallBC">
          <value>0</value>
        </BCType>
        <BCType id="all" label="mixture_f"      var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType id="all" label="enthalpy"       var="Neumann">
          <value>0.0</value>
        </BCType>
        <!-- for RMCRT-->
        <BCType id="all"  label = "radiation_temperature" var="Dirichlet">
          <value> 0. </value>
        </BCType>
        <BCType id="all"  label = "abskg"       var="Dirichlet">
          <value> 1. </value>
        </BCType>
      </Face>
      <Face side="z+" name="inlet">
        <BCType id="all" label="z+ wall" var="WallBC">
          <value>0</value>
        </BCType>
        <BCType id="all" label="mixture_f"      var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType id="all" label="enthalpy"       var="Neumann">
          <value>0.0</value>
        </BCType>
        <!-- for RMCRT-->
        <BCType id="all"  label = "radiation_temperature" var="Dirichlet">
          <value> 0. </value>
        </BCType>
        <BCType id="all"  label = "abskg"       var="Dirichlet">
          <value> 1. </value>
        </BCType>
      </Face>
    </BoundaryConditions>

    <Level>
      <Box label = "0">           <!-- coarse Level -->                     
         <lower>      [0,0,0]     </lower>         
         <upper>      [1, 1, 1]   </upper>         
         <resolution> [20,20,20]  </resolution>    
         <patches>    [1,1,1]     </patches> 
         <extraCells> [1,1,1]     </extraCells>
      </Box>
    </Level>
    
    <Level>
      <Box label = "1">           <!-- fine Level -->                               
         <lower>      [0,0,0]     </lower>         
         <upper>      [1, 1, 1]   </upper>         
         <resolution> [40,40,40]  </resolution>    
         <patches>    [2,2,2]     </patches> 
         <extraCells> [1,1,1]     </extraCells>
      </Box>
    </Level>
  </Grid>
  
  <!--__________________________________-->
  <PhysicalConstants>
    <gravity>[0,0,0]</gravity>
    <reference_point>[-1,-1,-1]</reference_point>
    <viscosity>0.</viscosity>
  </PhysicalConstants>


  <!--__________________________________-->
  <CFD>
    <!-- ARCHES specification -->
    <ARCHES>
    
      <BoundaryConditions/>

      <!-- TIME INTEGRATOR -->
      <TimeIntegrator>
        <ExplicitIntegrator order="second"/>
      </TimeIntegrator>

      <!-- SCALARS -->
      <TransportEqns>
        <Eqn label="mixture_f" type="CCscalar">
          <doDiff>true</doDiff>
          <doConv>true</doConv>
          <conv_scheme>super_bee</conv_scheme>
          <initialization type="constant">
            <constant>0.00</constant>
          </initialization>
          <Clipping>
            <low>0.0</low>
            <high>1.0</high>
          </Clipping>
        </Eqn> 
        
        <Eqn label="enthalpy" type="CCscalar">
          <doDiff>true</doDiff>
          <doConv>true</doConv>
          <conv_scheme>super_bee</conv_scheme>
          <initialization type="constant">
            <constant>0.0</constant>
          </initialization>
          <src label="divQ"/>
        </Eqn>

        <Sources>
          <src label="divQ" type="rmcrt_radiation">
            <calc_frequency>1</calc_frequency>
            <abskg label="abskg" />
            <RMCRT>
                <randomSeed>        false      </randomSeed>
                <nDivQRays>          5          </nDivQRays>
                <Threshold>         0.05       </Threshold>
                <solveBoundaryFlux> false       </solveBoundaryFlux>
                <StefanBoltzmann>   5.67051e-8 </StefanBoltzmann>
                
                <algorithm type='dataOnion'>
                  <halo>           [4,4,4]     </halo>

                  <ROI_extents type='patch_based'/>
            <!--       
                  <ROI_extents type='dynamic'>
                    <abskg_threshold>     0.1    </abskg_threshold>
                  </ROI_extents>

                  <ROI_extents type='fixed'>  currently crashing 
                    <min>          [ 0.25,0.25,0.25 ]    </min>
                    <max>          [ 0.75,0.75,0.75]     </max>
                  </ROI_extents>
             -->     
                </algorithm>
                
            </RMCRT>
          </src>
       </Sources> 
      </TransportEqns>

      <PropertyModels>
        <model type="radiation_properties" label="abskg">
          <initialization type="constant">
            <constant>1.0</constant>
          </initialization>
          <calculator type="burns_christon">
            <abskg label="gas_abskg"/>
          </calculator>
        </model>
      </PropertyModels>

      <Properties>
        <ConstantProps>
          <density>1.18</density>
          <temperature>64.804</temperature>
        </ConstantProps>
      </Properties>

      <ExplicitSolver>

        <initial_dt>0.05</initial_dt>

        <PressureSolver>
          <Parameters>
            <tolerance>1.0e-10</tolerance>
            <solver>cg</solver>
            <preconditioner>jacobi</preconditioner>
            <maxiterations>250</maxiterations>
          </Parameters>
        </PressureSolver>

        <MomentumSolver>
          <convection_scheme>central</convection_scheme>
        </MomentumSolver>

      </ExplicitSolver>

    </ARCHES>

  </CFD>

</Uintah_specification>

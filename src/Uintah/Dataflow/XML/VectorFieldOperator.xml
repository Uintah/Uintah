<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component SYSTEM "../../../../Dataflow/XML/component.dtd">
<?xml-stylesheet href="../../../../Dataflow/XML/component.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<component name="VectorFieldOperator" category="Operators">
  <overview>
    <authors>
      <author>Wayne Witzel</author>
    </authors>
    <summary>Create a scalar field from a vector field</summary>
    <description>
      <p>Version Date: November 2000</p><p>Version: 1.0</p>
      <p>This module creates a scalar field from a vector field via a
      value wise operation. A
      vector element can be selected, or an operation can be
      performed on the vector values to create a scalar field.</p>
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>Vector Field</name>
        <datatype>SCIRun::Field</datatype>
      </port>
    </inputs>
    <outputs>
      <port>
       <name>Scalar Field</name>
        <datatype>SCIRun::Field</datatype>
      </port>
   </outputs>
  </io>
</component>

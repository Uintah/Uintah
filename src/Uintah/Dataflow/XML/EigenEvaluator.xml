<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component SYSTEM "../../../../Dataflow/XML/component.dtd">
<?xml-stylesheet href="../../../../Dataflow/XML/component.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<component name="EigenEvaluator" category="Operators">
  <overview>
    <authors>
      <author>Wayne Witzel</author>
    </authors>
    <summary>Create an eigenvalue and eigenvector fields from a tensor
    field.</summary>
    <description>
      <p>Version Date: August 2000</p><p>Version: 1.0</p>
      <p> Compute a scalar field of eigenvalues and a vector field of
      eigenvectors from tensorfield input. </p>
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>Tensor Field</name>
        <datatype>SCIRun::Field</datatype>
      </port>
     </inputs>
    <outputs>
      <port>
	<name>Eigenvalue Field</name>
	<datatype>SCIRun::Field</datatype>
      </port>
      <port>
	<name>Eigenvector Field</name>
	<datatype>SCIRun::Field</datatype>
      </port>
    </outputs>
  </io>
</component>

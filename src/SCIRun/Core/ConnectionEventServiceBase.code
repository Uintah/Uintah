#include <SCIRun/Core/ServiceBase.code>

#include <iostream>

namespace SCIRun {

  template<class Interface>
  ConnectionEventServiceBase<Interface>::ConnectionEventServiceBase(const CoreFramework::internalPointer &framework)
    : ServiceBase<Interface>(framework, "ConnectionEventService"),
      listeners_lock("ConnectionEventService::listeners lock")
  {
  }
  
  template<class Interface>
  ConnectionEventServiceBase<Interface>::~ConnectionEventServiceBase()
  {
    std::cerr << "EventService destroyed..." << std::endl;
  }


  template<class Interface>
  Port::pointer 
  ConnectionEventServiceBase<Interface>::getService(const std::string&) 
  {
    return Port::pointer(this);
  }

  template<class Interface>
  void
  ConnectionEventServiceBase<Interface>::addConnectionEventListener(Ports::EventType type,
							       const Ports::ConnectionEventListener::pointer& eventListener)
  {
    Listener *listener = new Listener(type, eventListener);
    {
      SCIRun::Guard lock(&listeners_lock);
      listeners.push_back(listener);
    }
  }
  
  template<class Interface>
  void
  ConnectionEventServiceBase<Interface>::removeConnectionEventListener(Ports::EventType type,
								  const Ports::ConnectionEventListener::pointer& listener)
  {
    SCIRun::Guard lock(&listeners_lock);
    for (unsigned i=0; i<listeners.size(); i++)
      if ( listeners[i]->type == type && listeners[i]->listener == listener) {
	for (i++; i<listeners.size(); i++)
	  listeners[i-1] = listeners[i];
	listeners.resize(i-1);
      }
  }

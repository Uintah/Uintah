#ifndef SCIRun_ComponentInfoBase_code
#define SCIRun_ComponentInfoBase_code

#include <SCIRun/Core/TypeMapImpl.h>
#include <SCIRun/Core/CCAException.h>
#include <iostream>

#include <SCIRun/Core/ComponentInfoImpl.h>
#include <SCIRun/Core/PortInfoImpl.h>

namespace SCIRun {

  using namespace sci::cca;
  using namespace sci::cca::core;

  template<class Interface>
  ComponentInfoBase<Interface>::ComponentInfoBase(const CoreFramework::pointer &framework,
						  const std::string &instanceName,
						  const std::string &className,
						  const TypeMap::pointer &properties,
						  const Component::pointer &component)
    : ComponentIDBase<Interface>(framework, instanceName),
      component(component), className(className), properties(properties),
      ports_lock("ComponentInfo::ports_lock")
  {
  }
  
  template<class Interface>
  ComponentInfoBase<Interface>::~ComponentInfoBase()
  {
  }
  
  
  template<class Interface>
  SSIDL::array1<PortInfo::pointer> ComponentInfoBase<Interface>::getPorts()
  {
    Guard guard(&ports_lock);

    SSIDL::array1<PortInfo::pointer> array;
    for (PortMap::const_iterator i=componentPorts.begin(); i!=componentPorts.end(); ++i)
      array.push_back((*i).second);
    return array;
  }
  
  template<class Interface>
  PortInfo::pointer ComponentInfoBase<Interface>::getPortInfo( const std::string &name )
  {
    Guard guard(&ports_lock);

    PortMap::const_iterator info = componentPorts.find(name);
    if ( info == componentPorts.end() ) return PortInfo::pointer(0);
    return (*info).second;
  }

  template<class Interface>
  void ComponentInfoBase<Interface>::disconnectPort(const std::string &portName, const PortInfo::pointer &from)
  {
    Guard guard(&ports_lock);

    PortMap::const_iterator info = componentPorts.find(portName);
    if ( info == componentPorts.end() ) return;

    info->second->disconnect(from);
  }
  template<class Interface>
  std::string  ComponentInfoBase<Interface>::getClassName() 
  { 
    return className; 
  }
  
  template<class Interface>
  TypeMap::pointer  ComponentInfoBase<Interface>::getProperties() 
  { 
    return properties; 
  }
  
  template<class Interface>
  void  ComponentInfoBase<Interface>::setProperties(const TypeMap::pointer &properties) 
  { 
    this->properties = properties; 
  }
 
  template<class Interface>
  void  ComponentInfoBase<Interface>::destroyComponent()
  {
    // we can not delete the component here as we only have an interface to it 
    // and the interface does not tell us how to delete it.
    // this function should never be called.
    // Rather, a derive class should have the knowledge how to delete it.
  }
 
} // end namespace SCIRun

#endif // #ifndef SCIRun_ComponentInfoBase_code

#ifndef SCIRun_FrameworkPropertiesServiceImpl_code
#define SCIRun_FrameworkPropertiesServiceImpl_code

#include <SCIRun/Distributed/FrameworkPropertiesServiceImpl.h>
#include <SCIRun/Distributed/DistributedFramework.h>
#include <SCIRun/Distributed/PortInfo.h>

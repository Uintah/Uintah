# This script is just a short cut to run the BioFEM SCIRun Power App
# It will be copied to the top of the object side of the tree.
#!/bin/sh
export DISPLAY=:0.0
export SCIRUN_OBJDIR=`cd ${0/"\/SCIRun"/""}; pwd`
export SCIRUN_SRCDIR=`cd ${SCIRUN_OBJDIR}/../src; pwd`
export SCIRUN_THIRDPARTY_DIR=`cd ${SCIRUN_OBJDIR}/../Thirdparty; pwd`
export SCIRUN_ITCL_WIDGETS=${SCIRUN_THIRDPARTY_DIR}/lib/iwidgets/scripts
export DYLD_LIBRARY_PATH=${SCIRUN_THIRDPARTY_DIR}/lib:${SCIRUN_OBJDIR}/lib/:/usr/local/mdsplus/lib:${SCIRUN_OBJDIR}/../Freetype/lib
export TCL_LIBRARY=${SCIRUN_THIRDPARTY_DIR}/lib/tcl
export LOAD_PACKAGE=SCIRun,Teem
exec ${SCIRUN_OBJDIR}/scirun-bin $1 $2 $3 $4 $5 $6 $7 $8 $9

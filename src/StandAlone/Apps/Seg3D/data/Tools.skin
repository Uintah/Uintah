            <signal name="VisibleItem::made_invisible" 
                    target="GLWindow::mark_redraw"/>
            <signal name="VisibleItem::made_invisible" 
                    target="FocusGrab::Ungrab"/>


            
            <object class="ResampleDialog">
              <signal name="ToolDialog::Cancel" 
                      target="VisibilityGroup::show_VisibleItem">
                <var name="id">Nothing</var>
                <var name="group">ToolsVisibleGroup</var>
              </signal>
              <signal name="ToolDialog::Done" 
                      target="VisibilityGroup::show_VisibleItem">
                <var name="id">Nothing</var>
                <var name="group">ToolsVisibleGroup</var>
              </signal>

            </object>
          </object>

          <object class="VisibilityGroup::VisibleItem" id="BrushTool">
            <var name="group">ToolsVisibleGroup</var>
            <var name="visible">0</var>
            
            <xi:include href="BrushToolDialog.skin" parse="xml"/>
            
            <signal name="VisibleItem::made_visible" 
                    target="GLWindow::mark_redraw"/>
            <signal name="VisibleItem::made_invisible" 
                    target="GLWindow::mark_redraw"/>
            <signal name="VisibleItem::made_invisible" 
                    target="FocusGrab::Ungrab"/>



            <object class="BrushToolDialog">
              <signal name="ToolDialog::Cancel" 
                      target="VisibilityGroup::show_VisibleItem">
                <var name="id">Nothing</var>
                <var name="group">ToolsVisibleGroup</var>
              </signal>
              <signal name="ToolDialog::Done" 
                      target="VisibilityGroup::show_VisibleItem">
                <var name="id">Nothing</var>
                <var name="group">ToolsVisibleGroup</var>
              </signal>
            </object>

          </object>
          
          <object class="VisibilityGroup::VisibleItem" 
                  id="ITKCurvatureAnisotropicDiffusionImageFilterToolDialog">
            <var name="group">ToolsVisibleGroup</var>
            <var name="visible">0</var>
            
            <xi:include href="ITKCurvatureAnisotropicDiffusionImageFilterToolDialog.skin" parse="xml"/>
            
            <signal name="VisibleItem::made_visible" 
                    target="GLWindow::mark_redraw"/>
            <signal name="VisibleItem::made_invisible" 
                    target="GLWindow::mark_redraw"/>
            <signal name="VisibleItem::made_invisible" 
                    target="FocusGrab::Ungrab"/>

            <object class="ITKCurvatureAnisotropicDiffusionImageFilterToolDialog">                <signal name="ToolDialog::Cancel" 
                                                                                                          target="VisibilityGroup::show_VisibleItem">
              <var name="id">Nothing</var>
              <var name="group">ToolsVisibleGroup</var>
            </signal>
            <signal name="ToolDialog::Done" 
                    target="VisibilityGroup::show_VisibleItem">
              <var name="id">Nothing</var>
              <var name="group">ToolsVisibleGroup</var>
            </signal>
            </object>
          </object>

          <object class="VisibilityGroup::VisibleItem" 
                  id="ITKThresholdSegmentationLevelSetImageFilterToolDialog">
            <var name="group">ToolsVisibleGroup</var>
            <var name="visible">0</var>
            
            <xi:include href="ITKThresholdSegmentationLevelSetImageFilterToolDialog.skin" parse="xml"/>
            
            <signal name="VisibleItem::made_visible" 
                    target="GLWindow::mark_redraw"/>
            <signal name="VisibleItem::made_invisible" 
                    target="GLWindow::mark_redraw"/>
            <signal name="VisibleItem::made_invisible" 
                    target="FocusGrab::Ungrab"/>

            <object class="ITKThresholdSegmentationLevelSetImageFilterToolDialog">                
              <signal name="ToolDialog::Cancel" 
                      target="VisibilityGroup::show_VisibleItem">
                <var name="id">Nothing</var>

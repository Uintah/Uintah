         <resolution>[10,10,1]     </resolution>    
         <patches>   [2,2,1]       </patches> 
         <extraCells> [1,1,1]      </extraCells>      
      </Box>                                         
    </Level>
    <Level>
      <Box label = "1">                              
         <lower>     [ -1,-1,-0.01]  </lower>         
         <upper>     [  1, 1, 0.01]  </upper>         

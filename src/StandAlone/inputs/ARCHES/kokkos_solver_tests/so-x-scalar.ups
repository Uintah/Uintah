<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- @version: -->
<Uintah_specification>

  <Meta>
    <title>Scalar Test, -x inlet</title>
  </Meta>

  <SimulationComponent type="arches"/>

  <Solver type="hypre"/>

  <Time>
    <maxTime>5.0</maxTime>
    <initTime>0.0</initTime>
    <delt_min>1.0e-6</delt_min>
    <delt_max>0.1</delt_max>
    <timestep_multiplier>0.4</timestep_multiplier>
    <max_Timesteps>50</max_Timesteps>
  </Time>

  <DataArchiver>
    <save label="phi-up"/>
    <save label="phi-sb"/>
    <save label="phi-vl"/>
    <save label="phi-roe"/>
    <filebase>xminus_scalar_test.uda</filebase>
    <outputInitTimestep/>
    <outputTimestepInterval>5</outputTimestepInterval>
    <checkpoint cycle="2" interval="0.02"/>
    <compression>gzip</compression>
  </DataArchiver>

  <Grid>
    <BoundaryConditions>
      <DefaultMaterial>0</DefaultMaterial>
      <Face side="x-" name="inlet">
        <BCType label="velocity inlet" var="VelocityInlet">
          <value>[1,0,0]</value>
        </BCType>
        <BCType label="mixture_fraction_sb" var="Dirichlet">
          <value>1.0</value>
        </BCType>
        <BCType label="mixture_fraction_up" var="Dirichlet">
          <value>1.0</value>
        </BCType>
        <BCType label="mixture_fraction_roe" var="Dirichlet">
          <value>1.0</value>
        </BCType>
      </Face>
      <Face side="x+" name="outlet">
        <BCType label="the outlet" var="OutletBC">
          <value>0.0</value>
        </BCType>
        <BCType label="mixture_fraction_sb" var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType label="mixture_fraction_up" var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType label="mixture_fraction_roe" var="Neumann">
          <value>0.0</value>
        </BCType>
      </Face>
    </BoundaryConditions>

    <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[1,1,1]</upper>
        <resolution>[8,8,8]</resolution>
        <extraCells>[0,0,0]</extraCells>
        <patches>[1,1,1]</patches>
      </Box>
      <periodic>[1,1,1]</periodic>
    </Level>

  </Grid>

  <PhysicalConstants>
    <gravity>[-9.8,0,0]</gravity>
    <reference_point>[-1,-1,-1]</reference_point>
    <viscosity>0.001000</viscosity>
  </PhysicalConstants>

  <CFD>

    <!-- ARCHES specification -->
    <ARCHES>

      <BoundaryConditions/>

      <!-- TIME INTEGRATOR -->
      <TimeIntegrator order="1">
        <ExplicitIntegrator order="first"/>
      </TimeIntegrator>

      <!-- SCALARS -->

      <Turbulence model="none"/>

      <Properties>
        <ConstantProps>
          <density>1.18</density>
          <temperature>298</temperature>
        </ConstantProps>
      </Properties>

      <ScalarTransport>
        <eqn label="phi-up">
          <convection scheme="upwind" />
          <diffusion/>
        </eqn>
        <eqn label="phi-sb">
          <convection scheme="superbee" />
          <diffusion/>
        </eqn>
        <eqn label="phi-vl">
          <convection scheme="vanleer" />
          <diffusion/>
        </eqn>
        <eqn label="phi-roe">
          <convection scheme="minmod" />
          <diffusion/>
        </eqn>
      </ScalarTransport>

      <Initialization> 
        <task task_label="phi_initializer-up" 
              variable_label="phi-up" 
              type="wave">
              <wave type="square">
                <grid type="CC"/>
                <independent_variable label="gridX"/>
                <square min="0.0"
                        max=".50"
                        f="1.0"
                        offset="0.0"/>
              </wave>
        </task>
        <task task_label="phi_initializer-sb" 
              variable_label="phi-sb" 
              type="wave">
              <wave type="square">
                <grid type="CC"/>
                <independent_variable label="gridX"/>
                <square min="0.0"
                        max=".50"
                        f="1.0"
                        offset="0.0"/>
              </wave>
        </task>
        <task task_label="phi_initializer-vl" 
              variable_label="phi-vl" 
              type="wave">
              <wave type="square">
                <grid type="CC"/>
                <independent_variable label="gridX"/>
                <square min="0.0"
                        max=".50"
                        f="1.0"
                        offset="0.0"/>
              </wave>
        </task>
        <task task_label="phi_initializer-roe" 
              variable_label="phi-roe" 
              type="wave">
              <wave type="square">
                <grid type="CC"/>
                <independent_variable label="gridX"/>
                <square min="0.0"
                        max=".50"
                        f="1.0"
                        offset="0.0"/>
              </wave>
        </task>
      </Initialization>

      <ExplicitSolver>

        <initial_dt>0.05</initial_dt>

        <PressureSolver>
          <Parameters>
            <tolerance>1.0e-10</tolerance>
            <solver>cg</solver>
            <preconditioner>jacobi</preconditioner>
            <maxiterations>250</maxiterations>
          </Parameters>
        </PressureSolver>

        <MomentumSolver>
          <convection_scheme>central</convection_scheme>
          <initialization type="constant">
            <const_u>1.0</const_u>
            <const_v>.0</const_v>
            <const_w>.0</const_w>
          </initialization>
        </MomentumSolver>

      </ExplicitSolver>

    </ARCHES>

  </CFD>

</Uintah_specification>

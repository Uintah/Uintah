<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- @version: -->
<Uintah_specification>

  <Meta>
    <title>"rmcrt benchmark 1 "</title>
  </Meta>

  <SimulationComponent type="arches"/>

  <Solver type="hypre"/>

  <Time>
    <maxTime>5.0</maxTime>
    <initTime>0.0</initTime>
    <delt_min>1.0e-6</delt_min>
    <delt_max>0.1</delt_max>
    <timestep_multiplier>0.4</timestep_multiplier>
    <max_Timesteps>4</max_Timesteps>
  </Time>

  <DataArchiver>
    <filebase>rmcrt_bm1_1L.uda</filebase>
    <outputTimestepInterval>1</outputTimestepInterval>
    <save label="uVelocitySPBC"/>
    <save label="vVelocitySPBC"/>
    <save label="wVelocitySPBC"/>
    <save label="mixture_f"/>
    <save label="divQ"/>
    <save label="abskg"/>
    <save label="temperature"/>
    <save label="radiation_temperature"/>
    <save label="sigmaT4"/>
    <save label="cellType"/>
    <save label="boundFlux" />

    <checkpoint cycle = "2" timestepInterval = "2"/>
  </DataArchiver>

  <Grid>
    <BoundaryConditions>
      <Face side="x-" name="inlet">
        <BCType id="all" label="x- wall" var="WallBC">
          <value>0</value>
        </BCType>
        <BCType id="all" label="mixture_f"      var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType id="all" label="enthalpy"       var="Neumann">
          <value>0.0</value>
        </BCType>
                                <!-- for RMCRT-->
        <BCType id="all"  label = "radiation_temperature" 
                                                var="Dirichlet">
          <value> 0. </value>
        </BCType>
        <BCType id="all"  label = "abskg"       var="ForcedDirichlet">
          <value> 1. </value>
        </BCType>
      </Face>
      
      <Face side="x+" name="inlet">
        <BCType id="all" label="x+ wall" var="WallBC">
          <value>0</value>
        </BCType>
        <BCType id="all" label="mixture_f"      var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType id="all" label="enthalpy"       var="Neumann">
          <value>0.0</value>
        </BCType>
                                <!-- for RMCRT-->
        <BCType id="all"  label = "radiation_temperature" 
                                                var="Dirichlet">
          <value> 0. </value>
        </BCType>
        <BCType id="all"  label = "abskg"       var="ForcedDirichlet">
          <value> 1. </value>
        </BCType>
      </Face>
      
      
      <Face side="y-" name="inlet">
        <BCType id="all" label="y- wall" var="WallBC">
          <value>0</value>
        </BCType>
        <BCType id="all" label="mixture_f"      var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType id="all" label="enthalpy"       var="Neumann">
          <value>0.0</value>
        </BCType>
                                <!-- for RMCRT-->
        <BCType id="all"  label = "radiation_temperature" 
                                                var="Dirichlet">
          <value> 0. </value>
        </BCType>
        <BCType id="all"  label = "abskg"       var="ForcedDirichlet">
          <value> 1. </value>
        </BCType>
      </Face>
      
      
      <Face side="y+" name="inlet">
        <BCType id="all" label="y+ wall" var="WallBC">
          <value>0</value>
        </BCType>
        <BCType id="all" label="mixture_f"      var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType id="all" label="enthalpy"       var="Neumann">
          <value>0.0</value>
        </BCType>
                                <!-- for RMCRT-->
        <BCType id="all"  label = "radiation_temperature" 
                                                var="Dirichlet">
          <value> 0. </value>
        </BCType>
        <BCType id="all"  label = "abskg"       var="ForcedDirichlet">
          <value> 1. </value>
        </BCType>
      </Face>
      
      
      <Face side="z-" name="inlet">
        <BCType id="all" label="z- wall" var="WallBC">
          <value>0</value>
        </BCType>
        <BCType id="all" label="mixture_f"      var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType id="all" label="enthalpy"       var="Neumann">
          <value>0.0</value>
        </BCType>
                                <!-- for RMCRT-->
        <BCType id="all"  label = "radiation_temperature" 
                                                var="Dirichlet">
          <value> 0. </value>
        </BCType>
        <BCType id="all"  label = "abskg"       var="ForcedDirichlet">
          <value> 1. </value>
        </BCType>
      </Face>
      
      
      <Face side="z+" name="inlet">
        <BCType id="all" label="z+ wall" var="WallBC">
          <value>0</value>
        </BCType>
        <BCType id="all" label="mixture_f"      var="Neumann">
          <value>0.0</value>
        </BCType>
        <BCType id="all" label="enthalpy"       var="Neumann">
          <value>0.0</value>
        </BCType>
                                <!-- for RMCRT-->
        <BCType id="all"  label = "radiation_temperature" 
                                                var="Dirichlet">
          <value> 0. </value>
        </BCType>
        <BCType id="all"  label = "abskg"       var="ForcedDirichlet">
          <value> 1. </value>
        </BCType>
      </Face>
    </BoundaryConditions>

    <Level>
      <Box label = "0">                              
         <lower>      [0,0,0]     </lower>         
         <upper>      [1, 1, 1]   </upper>         
         <resolution> [21,21,21]  </resolution>    
         <patches>    [1,1,1]     </patches> 
         <extraCells> [1,1,1]     </extraCells>
      </Box>
    </Level>

  </Grid>

  <PhysicalConstants>
    <gravity>[0,0,0]</gravity>
    <reference_point>[-1,-1,-1]</reference_point>
    <viscosity>0.</viscosity>
  </PhysicalConstants>

  <CFD>

    <!-- ARCHES specification -->
    <ARCHES>

      <BoundaryConditions/>

      <!-- TIME INTEGRATOR -->
      <TimeIntegrator>
        <ExplicitIntegrator order="second"/>
      </TimeIntegrator>

      <!-- SCALARS -->
      <TransportEqns>
        <Eqn label="mixture_f" type="CCscalar">
          <doDiff>true</doDiff>
          <doConv>true</doConv>
          <conv_scheme>super_bee</conv_scheme>
          <initialization type="constant">
            <constant>0.00</constant>
          </initialization>
          <Clipping>
            <low>0.0</low>
            <high>1.0</high>
          </Clipping>
        </Eqn> 
        
        <Eqn label="enthalpy" type="CCscalar">
          <doDiff>true</doDiff>
          <doConv>true</doConv>
          <conv_scheme>super_bee</conv_scheme>
          <initialization type="constant">
            <constant>0.0</constant>
          </initialization>
          <src label="divQ"/>
        </Eqn>

        <Sources>
          <src label="divQ" type="rmcrt_radiation">
            <calc_frequency>1</calc_frequency>
            <abskg label = "abskg" /> 
            <RMCRT>
                <randomSeed>         false     </randomSeed>
                <nDivQRays>          2         </nDivQRays>
                <nFluxRays>          2         </nFluxRays>
                <Threshold>         0.05       </Threshold>
                <solveBoundaryFlux> true       </solveBoundaryFlux>
                <StefanBoltzmann>   5.67051e-8 </StefanBoltzmann>
            </RMCRT>
          </src>
       </Sources> 
      </TransportEqns>

      <PropertyModels>
        <model type="radiation_properties" label="abskg">
          <initialization type="constant">
            <constant>1.0</constant>
          </initialization>
          <calculator type="burns_christon">
            <abskg label="gas_abskg"/>
          </calculator>
        </model>
      </PropertyModels>

      <Properties>
        <ConstantProps>
          <density>1.18</density>
          <temperature>64.804</temperature>
        </ConstantProps>
      </Properties>

      <ExplicitSolver>

        <initial_dt>0.05</initial_dt>

        <PressureSolver>
          <Parameters>
            <tolerance>1.0e-10</tolerance>
            <solver>cg</solver>
            <preconditioner>jacobi</preconditioner>
            <maxiterations>250</maxiterations>
          </Parameters>
        </PressureSolver>

        <MomentumSolver>
          <convection_scheme>central</convection_scheme>
        </MomentumSolver>

      </ExplicitSolver>

    </ARCHES>

  </CFD>

</Uintah_specification>

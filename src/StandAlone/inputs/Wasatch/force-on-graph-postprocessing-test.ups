<Uintah_specification>

  <Meta>
    <title>Momentum Test with Taylor-Green Vortex MMS</title>
  </Meta>

  <SimulationComponent type="wasatch"/>
   <Solver type="hypre"/>
  <Wasatch>

    <Density method="CONSTANT">
      <Constant value="1.0" name="density"/>
    </Density>

    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="vel_magnitude"/>
      <Constant>1.0</Constant>
    </BasicExpression>

    <PostProcessingExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="vel_magnitude"/>
      <VelocityMagnitude>
      <XVelocity>
        <NameTag name="u"/>
      </XVelocity>
      <YVelocity>
        <NameTag name="v"/>
      </YVelocity>
      </VelocityMagnitude>
    </PostProcessingExpression>

    <PostProcessingExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="vorticity_z"/>
      <Vorticity>
      <Component>Z</Component>
      <Vel1>
        <NameTag name="y-mom" state="STATE_DYNAMIC"/>
      </Vel1>
      <Vel2>
        <NameTag name="x-mom" state="STATE_DYNAMIC"/>
      </Vel2>
      </Vorticity>
    </PostProcessingExpression>

    
    <!-- Set the initial condition expression for x-momentum -->
    <TaylorVortexMMS type="XVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="x-mom"/>
      <VelocityX amplitude="1.0" viscosity="0.0">
        <XCoordinate> <NameTag name="XXVOL"/> </XCoordinate>
        <YCoordinate> <NameTag name="YXVOL"/> </YCoordinate>
      </VelocityX>
    </TaylorVortexMMS>

    <!-- Set the initial condition for y-momentum -->
    <TaylorVortexMMS type="YVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="y-mom"/>
      <VelocityY amplitude="1.0" viscosity="0.0">
        <XCoordinate> <NameTag name="XYVOL"/> </XCoordinate>
        <YCoordinate> <NameTag name="YYVOL"/> </YCoordinate>
      </VelocityY>
    </TaylorVortexMMS>

    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="viscosity"/>
      <Constant>0.001</Constant>
    </BasicExpression>

    <!-- Momentum transport equations -->
    <MomentumEquations>
 	
      <X-Velocity>u</X-Velocity>
      <X-Momentum>x-mom</X-Momentum>
      <Y-Velocity>v</Y-Velocity>
      <Y-Momentum>y-mom</Y-Momentum>
      <Viscosity>
        <NameTag name="viscosity"/>
      </Viscosity>
      
      <Pressure>
        <!-- ReferencePressure value="0.0">
              <ReferenceCell>[0,0,0]</ReferenceCell>
        </ReferencePressure -->
        <Use3DLaplacian>    false</Use3DLaplacian>
        <Parameters>
 	 	 	 	 	 	 <skip>1</skip>

            <!-- CGSolver options -->
              <norm>     LInfinity  </norm>
              <criteria> Absolute   </criteria>

            <solver>         cg      </solver>
            <preconditioner> pfmg    </preconditioner>
            <tolerance>      1.e-8  </tolerance>
            <maxiterations>  1000    </maxiterations>
            <npre>           1       </npre>
            <npost>          1       </npost>
            <jump>           0       </jump>
           </Parameters>

      </Pressure>
    </MomentumEquations>

    <ForceOnGraph tasklist="initialization advance_solution">
      <NameTag name="vel_magnitude"/>
    </ForceOnGraph>

    <ForceOnGraph tasklist="advance_solution">
      <NameTag name="vorticity_z"/>
    </ForceOnGraph>

  </Wasatch>


  <Time>
    <maxTime>0.01</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.001</delt_min>
    <delt_max>0.001</delt_max>
    <max_Timesteps> 4 </max_Timesteps>            
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>


  <DataArchiver>
    <filebase>force_on_graph_postprocessing_test.uda</filebase>
    <outputTimestepInterval>1</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle="2" interval="0.001"/>
    <compression>gzip</compression>
    <save label="x-mom"/>
    <save label="y-mom"/>
    <save label="u"/>
    <save label="v"/>
    <save label="pressure"/>
    <save label="x-mom_convFlux_x"/>
    <save label="x-mom_convFlux_y"/>
    <save label="y-mom_convFlux_x"/>
    <save label="y-mom_convFlux_y"/>
    <save label="dilatation"/>
    <save label="density"/>
    <save label="strain_xx"/>
    <save label="strain_xy"/>
    <save label="strain_yy"/>
    <save label="strain_yx"/>
    <save label="x-mom_rhs_partial"/>
    <save label="y-mom_rhs_partial"/>
    <save label="x-mom_rhs"/>
    <save label="y-mom_rhs"/>
    <save label="vel_magnitude"/>
    <save label="vorticity_z"/>
  </DataArchiver> 

  <Grid>
      <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[1,1,1]</upper>
        <resolution>[64,64,2]</resolution>
        <patches>[2,2,1]</patches>
      </Box>
      <periodic>[1,1,1]</periodic>
    </Level>
  </Grid>

</Uintah_specification>

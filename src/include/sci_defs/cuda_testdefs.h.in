#ifndef SCI_CUDA_DEFS_H
#define SCI_CUDA_DEFS_H

@DEF_CUDA@

#ifdef HAVE_CUDA
#define INDEX3D(dx,dy,i,j,k) ((i) + ((j)*dx) + ((k)*dx*dy))

#  include <cuda.h>
#  include <cuda_runtime.h>
#  include <cuda_runtime_api.h>
#  include <curand.h>
#  include <curand_kernel.h>


#ifdef __cplusplus
extern "C" {
#endif

// Error handling wrapper for CUDA RUNTIME API calls (no-sync)
#  define CUDA_RT_SAFE_CALL( call ) {                                  \
    cudaError err = call;                                                    \
    if(err != cudaSuccess) {                                                  \
        fprintf(stderr, "CUDA error in file '%s', on line %i : %s.\n",         \
                __FILE__, __LINE__, cudaGetErrorString( err) );                \
        exit(EXIT_FAILURE);                                                    \
    } }

// Error handling wrapper for CUDA Driver API calls (no-sync)
#  define CUDA_DR_SAFE_CALL( call ) {                                  \
    CUresult err = call;                                                       \
    if(err != CUDA_SUCCESS) {                                                 \
        fprintf(stderr, "CUDA driver error %x in file '%s' on line %i.\n",     \
                err, __FILE__, __LINE__ );                                     \
        exit(EXIT_FAILURE);                                                    \
    } }
    
#ifdef __cplusplus
}
#endif       

#endif

#endif


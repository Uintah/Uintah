<Uintah_specification>

  <Meta>
    <title>Momentum Test with Boundary Conditions</title>
  </Meta>

  <SimulationComponent type="wasatch"/>
   <Solver type="hypre" />
  <Wasatch>
    <Density>
      <Constant value="1.0" name="density"/>
    </Density>
    
    <!-- Set the initial condition expression for x-momentum -->
    <BasicExpression type="XVOL">
       <TaskList>initialization</TaskList>
       <NameTag name="x-mom" state="STATE_NONE" />
       <Constant>0.0</Constant>
    </BasicExpression>

    <BasicExpression type="YVOL">
       <TaskList>initialization</TaskList>
       <NameTag name="y-mom" state="STATE_NONE" />
       <Constant>0.0</Constant>
    </BasicExpression>
               
    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="viscosity" state="STATE_NONE" />
      <Constant>0.01</Constant>
    </BasicExpression>

    <!-- Momentum transport equations -->
    <MomentumEquations>
      <X-Velocity>u</X-Velocity>
      <X-Momentum>x-mom</X-Momentum>
      <Y-Velocity>v</Y-Velocity>
      <Y-Momentum>y-mom</Y-Momentum>
      <Viscosity>
        <NameTag name="viscosity" state="STATE_NONE" />
      </Viscosity>
      
      <Pressure>
        <!-- ReferencePressure value="0.0">
              <ReferenceCell>[0,0,0]</ReferenceCell>
        </ReferencePressure -->
        <Use3DLaplacian>    false</Use3DLaplacian>
        <Parameters>
            <!-- Hypre options -->
            <solver>         cg      </solver>
            <preconditioner> pfmg    </preconditioner>
            <tolerance>      1e-13  </tolerance>
            <maxiterations>  200    </maxiterations>
            <relax_type>     2       </relax_type>
           </Parameters>
      </Pressure>
    </MomentumEquations>


  </Wasatch>


  <Time>
    <maxTime>5</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.00001</delt_min>
    <delt_max>0.00001</delt_max>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>


  <DataArchiver>
    <filebase>momentum-test-bc-channel.uda</filebase>
    <outputTimestepInterval>1</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle = "2" interval = "0.001"/>
    <compression>gzip</compression>
    <save label="x-mom"/>
    <save label="y-mom"/>
    <save label="u"/>
    <save label="v"/>
    <save label="pressure"/>
    <save label="dilatation"/>
  </DataArchiver> 

  <Grid>
      <BoundaryConditions>
      <!-- BOUNDARY CONDITIONS FOR MOMENTUM -->
      <Face side="x-">

        <BCType  var="Dirichlet" label="x-mom">
          <value> 1.0 </value>
        </BCType>
        
        <BCType  var="Dirichlet" label="y-mom">
          <value> 0.0 </value>
        </BCType>
        
        <BCType  var="Dirichlet" label="x-mom_rhs_partial">
          <value> 0.0 </value>
        </BCType>                                               

      </Face>
      
      <Face side="x+">

        <BCType  var="Neumann" label="x-mom">
          <value> 0.0 </value>
        </BCType>

        <BCType  var="Neumann" label="y-mom">
          <value> 0.0 </value>
        </BCType>

        <BCType  var="Neumann" label="pressure">
          <value> 0.0 </value>
        </BCType>                       
        
        <BCType  var="Neumann" label="x-mom_rhs_partial">
          <value> 0.0 </value>
        </BCType>      

        <BCType  var="Neumann" label="x-mom_convFlux_x">
          <value> 0.0 </value>
        </BCType>      
        
        <BCType  var="Neumann" label="tau_xx">
          <value> 0.0 </value>
        </BCType>                                                                 
        
      </Face>
      
      <Face side="y-">
      
        <BCType  var="Dirichlet" label="x-mom">
          <value> 0.0 </value>
        </BCType>
        
        <BCType  var="Dirichlet" label="y-mom">
          <value> 0.0 </value>
        </BCType>
        
        <BCType  var="Dirichlet" label="y-mom_rhs_partial">
          <value> 0.0 </value>
        </BCType>        
                        
      </Face>
      
      <Face side="y+">
      
        <BCType  var="Dirichlet" label="x-mom">
          <value> 0.0 </value>
        </BCType>
        
        <BCType  var="Dirichlet" label="y-mom">
          <value> 0.0 </value>
        </BCType>
        
        <BCType  var="Dirichlet" label="y-mom_rhs_partial">
          <value> 0.0 </value>
        </BCType>     
                        
      </Face>

      </BoundaryConditions>
      <Level>
      <Box label="1">
        <lower>[0, 0,  0]</lower>
        <upper>[1, 1, 0.01]</upper>
        <!-- extraCells>[1,1,0]</extraCells -->
        <resolution>[16,16,2]</resolution>
        <patches>[1,1,1]</patches>
      </Box>
      <periodic>[0,0,1]</periodic>
    </Level>
  </Grid>

</Uintah_specification>

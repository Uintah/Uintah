        <!--type="wave">-->
        <!--<wave type="square">-->
        <!--<grid type="FY"/>-->
        <!--<independent_variable label="gridX" type="CC"/>-->
        <!--<square min="0.0"-->
        <!--max="1.0"-->
        <!--f="1.0"-->
        <!--offset="0.5"/>-->
        <!--</wave>-->
        <!--</task>-->
        <!--<task task_label="z-mom_initialize"-->
        <!--variable_label="z-mom"-->
        <!--type="wave">-->
        <!--<wave type="square">-->
        <!--<grid type="FZ"/>-->
        <!--<independent_variable label="gridX" type="CC"/>-->
        <!--<square min="0.0"-->
        <!--max="1.0"-->
        <!--f="1.0"-->
        <!--offset="0.5"/>-->
        <!--</wave>-->
        <!--</task>-->
      </Initialization>
      <BoundaryConditions>
        <force_area_calc/>
      </BoundaryConditions>
      <KokkosSolver>
      </KokkosSolver>
    </ARCHES>
  </CFD>
</Uintah_specification>

<Uintah_specification>
  <Meta>
    <title>Particles Free Fall</title>
  </Meta>
  <SimulationComponent type="wasatch"/>
  <Solver type="hypre"/>
  <Wasatch>
    <TimeIntegrator> FE </TimeIntegrator>
    
    <CommonGeometry>
      <geom_object name="sphere">
				<sphere label="sphere">
					<origin>[0.7,0,0]</origin>
					<radius>0.2</radius>
				</sphere>      
      </geom_object>
    </CommonGeometry>

    <ParticleTransportEquations>
      <ParticlesPerCell>1</ParticlesPerCell>
      <ParticleDensity name="p.rho" state="STATE_NONE"/>
      <ParticleMass name="p.m" state="STATE_DYNAMIC">
        <SourceTerm name="nothing" state="STATE_NONE"/>
      </ParticleMass>
      <ParticleSize name="p.size" state="STATE_DYNAMIC">
        <SourceTerm name="nothing" state="STATE_NONE"/>
      </ParticleSize>
      <ParticlePosition x="p.xw" y="p.yw" z="p.zw">
        <Velocity>
          <XVel name="p.u" state="STATE_DYNAMIC"/>
          <YVel name="p.v" state="STATE_DYNAMIC"/>
          <ZVel name="p.w" state="STATE_DYNAMIC"/>
        </Velocity>
      </ParticlePosition>
      <ParticleMomentum x="p.u" y="p.v" z="p.w">
        <Gravity direction="X"/>
        <GasProperties>
          <GasViscosity name="viscosity" state="STATE_NONE"/>
          <GasDensity name="density" state="STATE_NONE"/>
          <GasVelocity>
            <XVel name="u" state="STATE_NONE"/>
            <YVel name="v" state="STATE_NONE"/>
            <ZVel name="w" state="STATE_NONE"/>
          </GasVelocity>
        </GasProperties>
      </ParticleMomentum>
    </ParticleTransportEquations>
    <Density>
      <Constant value="1.0" name="density"/>
    </Density>
    <BasicExpression type="PARTICLE">
      <TaskList>initialization</TaskList>
      <NameTag name="p.size" state="STATE_NONE"/>
      <RandomField low="0.01" high="0.02" seed="11"/>
    </BasicExpression>
    <BasicExpression type="PARTICLE">
      <TaskList>initialization</TaskList>
      <NameTag name="p.rho" state="STATE_NONE"/>
      <Constant>1000</Constant>
    </BasicExpression>
    <BasicExpression type="PARTICLE">
      <TaskList>initialization</TaskList>
      <NameTag name="p.zw" state="STATE_NONE"/>
      <ParticlePositionIC coordinate="Z" bounds="PATCHBASED">
        <Geometry seed="1">
          <geom_object>
            <sphere label="sphere"/>
          </geom_object>
        </Geometry>
      </ParticlePositionIC>
    </BasicExpression>
    <BasicExpression type="PARTICLE">
      <TaskList>initialization</TaskList>
      <NameTag name="p.yw" state="STATE_NONE"/>
      <ParticlePositionIC coordinate="Y" bounds="PATCHBASED">
        <Geometry seed="2">
          <geom_object>
            <sphere label="sphere"/>
          </geom_object>
        </Geometry>
      </ParticlePositionIC>
    </BasicExpression>
    <BasicExpression type="PARTICLE">
      <TaskList>initialization</TaskList>
      <NameTag name="p.xw" state="STATE_NONE"/>
      <ParticlePositionIC coordinate="X" bounds="PATCHBASED">
        <Geometry seed="3">
          <geom_object>
            <sphere label="sphere"/>
          </geom_object>
        </Geometry>
      </ParticlePositionIC>
    </BasicExpression>
    <BasicExpression type="PARTICLE">
      <TaskList>initialization</TaskList>
      <NameTag name="p.u" state="STATE_NONE"/>
      <Constant>0.0</Constant>
    </BasicExpression>
    <BasicExpression type="PARTICLE">
      <TaskList>initialization</TaskList>
      <NameTag name="p.v" state="STATE_NONE"/>
      <Constant>0.0</Constant>
    </BasicExpression>
    <BasicExpression type="PARTICLE">
      <TaskList>initialization</TaskList>
      <NameTag name="p.w" state="STATE_NONE"/>
      <Constant>0.0</Constant>
    </BasicExpression>
    <!-- Set the initial condition expression for momentum -->
    <BasicExpression type="XVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="u" state="STATE_NONE"/>
      <Constant>0.0</Constant>
    </BasicExpression>
    <BasicExpression type="XVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="u" state="STATE_NONE"/>
      <Constant>0.0</Constant>
    </BasicExpression>
    <BasicExpression type="YVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="v" state="STATE_NONE"/>
      <Constant>0.0</Constant>
    </BasicExpression>
    <BasicExpression type="YVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="v" state="STATE_NONE"/>
      <Constant>0.0</Constant>
    </BasicExpression>
    <BasicExpression type="ZVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="w" state="STATE_NONE"/>
      <Constant>0.0</Constant>
    </BasicExpression>
    <BasicExpression type="ZVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="w" state="STATE_NONE"/>
      <Constant>0.0</Constant>
    </BasicExpression>
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="viscosity" state="STATE_N"/>
      <Constant>1e-2</Constant>
    </BasicExpression>
    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="viscosity" state="STATE_NONE"/>
      <Constant>1e-2</Constant>
    </BasicExpression>
  </Wasatch>
  <Time>
    <maxTime>60</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.005</delt_min>
    <delt_max>0.005</delt_max>
    <max_Timesteps>500</max_Timesteps>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>
  <DataArchiver>
    <filebase>particle-test-wall-bc-xdir.uda</filebase>
    <outputTimestepInterval>10</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle="2" interval="0.5"/>
    <save label="p.x"/>
    <save label="p.xw_rhs"/>
    <save label="p.yw_rhs"/>
    <save label="p.zw_rhs"/>
    <save label="p.re"/>
    <save label="p.cd"/>
    <save label="p.tau"/>
    <save label="p.drag_x"/>
    <save label="p.drag_y"/>
    <save label="p.drag_z"/>
    <save label="p.particleID"/>
    <save label="p.u_rhs"/>
    <save label="p.v_rhs"/>
    <save label="p.w_rhs"/>
    <save label="p.m"/>
    <save label="p.u"/>
    <save label="p.v"/>
    <save label="p.w"/>
    <save label="p.size"/>
    <save label="p.xw"/>
    <save label="p.yw"/>
    <save label="p.zw"/>
    <save label="density"/>
  </DataArchiver>
  <Grid>
    <BoundaryConditions>
    	<Face side="x-" type="Wall"/>
			<Face side="x+" type="Wall"/>
    </BoundaryConditions>
    <Level>
      <Box label="1">
        <lower>[ -1, -1,-1]</lower>
        <upper>[ 1, 1, 1]</upper>
        <resolution>[30,30,30]</resolution>
        <patches>[2,2,2]</patches>
      </Box>
      <periodic>[0,0,0]</periodic>
    </Level>
  </Grid>
</Uintah_specification>

<?xml version='1.0' encoding='ISO-8859-1'?>
<!-- DOCTYPE Uintah_specification SYSTEM "input.dtd" -->
<!-- @version: -->
<Uintah_specification>
  <Meta>
    <title>Arches Decay of Isotropic Turbulence - kokkos solver - 32x32x32</title>
  </Meta>
  <SimulationComponent type="arches"/>
  <Solver type="hypre"/>
  <Time>
    <maxTime>     0.67   </maxTime>
    <!--maxTime>     0.2   </maxTime-->
    <initTime>    0.0     </initTime>
    <delt_min>    1e-2 </delt_min>
    <delt_max>    1e-2     </delt_max>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>
  <DataArchiver>
    <filebase>kokkos_iso_32_dynaMT.uda</filebase>
    <outputTimestepInterval>2</outputTimestepInterval>
    <outputInitTimestep/>
    <save label="x-mom"/>
    <save label="y-mom"/>
    <save label="z-mom"/>
    <save label="uVel"/>
    <save label="CCuVel"/>
    <save label="vVel"/>
    <save label="CCvVel"/>
    <save label="wVel"/>
    <save label="CCwVel"/>
    <save label="gamma"/>
    <save label="Cs"/>
    <save label="pressure"/>
    <save label="b_press"/>
    <!--save label="viscosity_csigma"/-->
    <!--checkpoint cycle="2" interval=".3"/-->
    <compression>gzip</compression>
  </DataArchiver>
  <Grid>
    <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[0.56548668,0.56548668,0.56548668]</upper>
        <resolution>[32,32,32]</resolution>
        <extraCells>[0,0,0]</extraCells>
        <patches>[2,2,2]</patches>
      </Box>
      <periodic>[1,1,1]</periodic>
    </Level>
    <BoundaryConditions>
    </BoundaryConditions>
  </Grid>
  <PhysicalConstants>
    <gravity>[0,0,0]</gravity>
    <reference_point>[0,0,0]</reference_point>
    <viscosity>1e-5</viscosity>
  </PhysicalConstants>
  <CFD>
    <ARCHES>
      <TimeIntegrator order="1">
        <ExplicitIntegrator order="first"/>
      </TimeIntegrator>
      <VarID>
        <var role="uvelocity" label="uVel"/>
        <var role="vvelocity" label="vVel"/>
        <var role="wvelocity" label="wVel"/>
        <var role="total_viscosity" label="gamma"/>
        <var role="density" label="density"/>
      </VarID>
      <PropertyModelsV2>
        <model label="density" type="constant_property">
          <grid type="CC"/>
          <value>1.</value>
        </model>
        <!--model label="gamma" type="constant_property">
          <grid type="CC"/>
          <value>1.e-3</value>
        </model-->

        <model label="interpo_u" type="Interpolation_var">
          <variable label ="uVel" type="FX"/>
          <new_variable label ="CCuVel" type="FX"/>
          <interpolation scheme ="central"/>
        </model>
        <model label="interpo_v" type="Interpolation_var">
          <variable label ="vVel" type="FY"/>
          <new_variable label ="CCvVel" type="FY"/>
          <interpolation scheme ="central"/>
        </model>
        <model label="interpo_w" type="Interpolation_var">
          <variable label ="wVel" type="FZ"/>
          <new_variable label ="CCwVel" type="FZ"/>
          <interpolation scheme ="central"/>
        </model>
      </PropertyModelsV2>
      <!--src_kokkos>
        <src label="x_mms" type="MMS_mom">
          <variable type="FX"/>
          <which_vel>u</which_vel>
          <coordinates x="ucellX" y="gridY"/>
        </src>
        <src label="y_mms" type="MMS_mom">
          <variable type="FY"/>
          <which_vel>v</which_vel>
          <coordinates x="gridX" y="vcellY"/>
        </src>
      </src_kokkos-->
      <KMomentum>
        <!--convection scheme="upwind"/-->
        <convection scheme="central"/>
        <!--convection scheme="f_central"/-->
        <!--convection scheme="upwind"/-->
        <!--src_x label = "x_mms_source"/>
        <src_y label = "y_mms_source"/-->
        <!--inviscid/-->
        <!--src_x label = "x_mms_source_diff"/>
        <src_y label = "y_mms_source_diff"/-->
        <PressureSolver>
          <Parameters>
            <normalize_pressure>true    </normalize_pressure>
            <solver>           cg     </solver>
            <preconditioner>  pfmg    </preconditioner>
            <tolerance>      1.0e-12  </tolerance>
            <maxiterations>    750     </maxiterations>
            <skip>              1     </skip>
            <setupFrequency>    0     </setupFrequency>
            <jump>              0     </jump>
          </Parameters>
        </PressureSolver>
      </KMomentum>
      <TurbulenceModels>
       <model label="DS_task1" type="DSFT">
       <CCvelocities CCuVel_label="CCuVel" CCvVel_label="CCvVel" CCwVel_label="CCwVel"/>
       </model>
       <model label="DS_task2" type="DSML">
       <Smagorinsky_constant_name Cs = "Cs" />
       </model>
       <model label="DS_task3" type="DSCs">
       <Smagorinsky_constant_name Cs = "Cs" />
       </model>
      </TurbulenceModels>
      <Initialization>
        <task task_label="x-mom-init" variable_label="x-mom"  type="inputFile">
          <uVel label ="x-mom"/>
          <vVel label ="y-mom"/>
          <wVel label ="z-mom"/>
          <filename>cbc32_uvw_arches.gz</filename>
        </task>
      </Initialization>
      <BoundaryConditions>
        <force_area_calc/>
      </BoundaryConditions>
      <KokkosSolver>
      </KokkosSolver>
    </ARCHES>
  </CFD>
</Uintah_specification>

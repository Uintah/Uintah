   <Meta>
       <title>Example 1-D problem from GIMP paper</title>
   </Meta>

   <SimulationComponent type="mpm" />

   <Time>
       <maxTime>3.</maxTime>
       <initTime>0.0</initTime>
       <delt_min>1.e-4</delt_min>
       <delt_max>1.e-4</delt_max>
       <timestep_multiplier>0.2</timestep_multiplier>
   </Time>
   <DataArchiver>
        <filebase>gimpPaper.uda</filebase>
        <outputInterval>1.0</outputInterval>
        <save label = "p.x"/>
        <save label = "p.mass"/>
        <save label = "p.stress"/>
        <save label = "p.volume"/>
        <save label = "p.velocity"/>
        <save label = "p.particleID"/>
   </DataArchiver>

    <MPM>
       <time_integrator>explicit</time_integrator>
       <artificial_viscosity>true</artificial_viscosity>
       <interpolator>gimp</interpolator>
       <DoExplicitHeatConduction>false</DoExplicitHeatConduction>
    </MPM>

    <PhysicalConstants>
       <gravity>[-800.0,0,0]</gravity>
    </PhysicalConstants>

    <MaterialProperties>
       <MPM>
            <material name = "top crystal">
                <density>1.0</density>
              <constitutive_model type = "hypo_elastic"> 
                 <G>1.e6</G>
                 <K>1.e6</K>
               </constitutive_model>
                <thermal_conductivity>1.0e-7</thermal_conductivity>
                <specific_heat>1.004e-5</specific_heat>
                <geom_object>
                  <box label = "box">
                     <min>[ 0.0, 0.0, 0.0]</min>
                     <max>[50.0, 1.0, 1.0]</max>
                  </box>

                  <res>[2,1,1]</res>
                  <velocity>[0.0,0.0,0.0]</velocity>
                  <temperature>12</temperature>
               </geom_object>
           </material>

           <contact>
              <type>null</type>
           </contact>
       </MPM>
    </MaterialProperties>
       
    <Grid>
       <BoundaryConditions>
         <Face side = "x-">
             <BCType id = "all" var = "symmetry" label = "Symmetric"> </BCType>
          </Face>
          <Face side = "x+">
             <BCType id = "all" var = "symmetry" label = "Symmetric"> </BCType>
          </Face>
          <Face side = "y-">
             <BCType id = "all" var = "symmetry" label = "Symmetric"> </BCType>
          </Face>                  
          <Face side = "y+">
             <BCType id = "all" var = "symmetry" label = "Symmetric"> </BCType>
          </Face>
          <Face side = "z-">
             <BCType id = "all" var = "symmetry" label = "Symmetric"> </BCType>
          </Face>
          <Face side = "z+">
             <BCType id = "all" var = "symmetry" label = "Symmetric"> </BCType>
          </Face>
       </BoundaryConditions>
       <Level>
           <Box label = "1">
              <lower>[ 0.0, 0.0, 0.0]</lower>
              <upper>[60.0, 1.0, 1.0]</upper>
              <resolution>[60,1,1]</resolution>
              <patches>[1,1,1]</patches>
              <extraCells>[1,1,1]</extraCells>
           </Box>
       </Level>
    </Grid>
</Uintah_specification>


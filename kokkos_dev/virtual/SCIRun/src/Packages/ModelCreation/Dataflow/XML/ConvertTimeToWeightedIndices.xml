<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../../../../Dataflow/XML/component.dtd">
<component name="ConvertTimeToWeightedIndices" category="Time" optional="false">
  <overview>
    <authors>
      <author>Jeroen Stinstra</author>
    </authors>
    <summary>
      This module calculates a weights vector to do a linear interpolation between two time frames.

    </summary>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>TimeVector</name>
        <datatype>SCIRun::Matrix</datatype>
      </port>
      <port>
        <name>Time</name>
        <datatype>SCIRun::Matrix</datatype>
      </port>
    </inputs>
    <outputs>
      <port>
        <name>TimeWeights</name>
        <datatype>SCIRun::Matrix</datatype>
      </port>
      <port>
        <name>Time</name>
        <datatype>SCIRun::Matrix</datatype>
      </port>
    </outputs>
  </io>
</component>

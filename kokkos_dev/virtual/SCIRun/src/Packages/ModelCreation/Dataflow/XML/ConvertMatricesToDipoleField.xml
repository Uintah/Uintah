<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../../../../Dataflow/XML/component.dtd">
<component name="ConvertMatricesToDipoleField" category="Converter" optional="false">
  <overview>
    <authors>
      <author>Jeroen Stinstra</author>
    </authors>
    <summary>
      This module takes a matrix with locations and strengths and converts it into a pointcloud field with vectors.

    </summary>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>Locations</name>
        <datatype>SCIRun::Matrix</datatype>
      </port>
      <port>
        <name>Strengths</name>
        <datatype>SCIRun::Matrix</datatype>
      </port>
    </inputs>
    <outputs>
      <port>
        <name>DipoleField</name>
        <datatype>SCIRun::Field</datatype>
      </port>
    </outputs>
  </io>
</component>

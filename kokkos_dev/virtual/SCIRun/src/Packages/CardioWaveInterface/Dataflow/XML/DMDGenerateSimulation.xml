<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../../../../Dataflow/XML/component.dtd">
<component name="DMDGenerateSimulation" category="DiscreteMultiDomain" optional="false">
  <overview>
    <authors>
      <author>Jeroen Stinstra</author>
    </authors>
    <summary>
      Build a CardioWave Simulation. This module uses the create SimulationBundle
      and from it creates all the files needed to compile and run a CardioWave
      simulation.
    </summary>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>SimulationBundle</name>
        <datatype>SCIRun::Bundle</datatype>
      </port>
      <port>
        <name>FileName</name>
        <datatype>SCIRun::String</datatype>
      </port>
    </inputs>
    <outputs>
      <port>
        <name>VisualizationBundle</name>
        <datatype>SCIRun::Bundle</datatype>
      </port>
      <port>
        <name>SimulationScript</name>
        <datatype>SCIRun::String</datatype>
      </port>
    </outputs>
  </io>
</component>

<definition class="BrushToolDialog">
  <object class="Frame">
    <var name="invert">1</var>
    <object class="Box">
      <var name="color">#AAAAAAAA</var>
      
      <object class="Texture">
        <var name="file">BackgroundTile04.png</var>
        <var name="color">#AAAAAAAA</var>
        <var name="repeatx">1</var>
        <var name="repeaty">1</var>
      </object>

      <object class="Grid">
        <var name="rows">8</var>
        <var name="cols">1</var>
        
        <object class="Root::Text">
          <var name="row">1</var>
          <var name="col">1</var>
          <var name="cell-height">35</var>
          <var name="text">Paint Brush</var>
          <var name="size">30</var>
          <var name="fgcolor">#000000FF</var>
          <var name="bgcolor">#FFFFFF80</var>
          <var name="anchor">W</var>
          <var name="offsetx">-2</var>
          <var name="offsety">2</var>
          <var name="shadow">1</var>
        </object>
        
        <object class="LabeledSpinnerBox">
          <var name="row">3</var>
          <var name="col">1</var>
          <var name="cell-height">35</var>
          <var name="LabeledSpinnerBox::text"
               propagate="yes"
               overwrite="no">Radius:</var>
          <var name="LabeledSpinnerBox::variable"
               propagate="yes"
               overwrite="no">$Painter::brush_radius</var>
        </object>
        
        
        <object class="LabeledSpinnerBox">
          <var name="row">4</var>
          <var name="col">1</var>
          <var name="cell-height">35</var>
          <var name="LabeledSpinnerBox::text"
               propagate="yes"
               overwrite="no">Value:</var>
          <var name="LabeledSpinnerBox::variable"
               propagate="yes"
               overwrite="no">$Painter::brush_value</var>
        </object>

<!--
        <object class="LabeledSpinnerBox">
          <var name="row">5</var>
          <var name="col">1</var>
          <var name="cell-height">35</var>
          <var name="LabeledSpinnerBox::text"
               propagate="yes"
               overwrite="no">Softness:</var>
          <var name="LabeledSpinnerBox::variable"
               propagate="yes"
               overwrite="no">$Painter::brush_softness</var>
        </object>
-->
        

        <object class="Button">
          <var name="row">7</var>
          <var name="col">1</var>
          <var name="cell-height">35</var>
          <var name="Button::color" propagate="yes">#FFEEEEFF</var>
          <var name="Button::Text::text" propagate="yes">Cancel</var>
          <signal name="Button::clicked" 
                  target="ToolDialog::Cancel">
          </signal>
        </object>
        
        
        <object class="Button">
          <var name="row">8</var>
          <var name="col">1</var>
          <var name="cell-height">35</var>
          <var name="Button::color" propagate="yes" overwrite="no">#EEFFEEFF</var>
          <var name="Button::Text::text" propagate="yes">Done Painting</var>
          
          <signal name="Button::clicked" 
                  target="Painter::FinishTool"/>

          <signal name="Button::clicked" 
                  target="ToolDialog::Done">
          </signal>
        </object>
      </object>
    </object>
  </object>
</definition>
  
    

<!ELEMENT skinner (var*, xi:include*, definition*, object*)> 
<!ATTLIST skinner 
          version CDATA #REQUIRED
          xmlns:xi CDATA "http://www.w3.org/2001/XInclude"> 


<!ELEMENT var (#PCDATA)>
<!ATTLIST var
          name CDATA #REQUIRED
          type (unknown | string | int | double | bool | color) "unknown"
          overwrite (yes | no) "yes"
          propagate (yes | no) "no">

<!ELEMENT object (var*, signal*, definition*, object*)>
<!ATTLIST object
          class CDATA #REQUIRED
          id CDATA #IMPLIED>

<!ELEMENT definition (object)>
<!ATTLIST definition
          class CDATA #REQUIRED
          state CDATA #IMPLIED>

<!ELEMENT signal (var*)>
<!ATTLIST signal 
          name CDATA #REQUIRED
          target CDATA #REQUIRED>

<!ELEMENT xi:include EMPTY>
<!ATTLIST xi:include
          href CDATA #REQUIRED
          parse CDATA #REQUIRED>

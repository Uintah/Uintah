<definition class="QuitDialog">
  <object class="Root::FocusRegion">    
    <var name="QuitDialog::visible" propagate="yes" overwrite="no">1</var>
    <var name="visible">$QuitDialog::visible</var>    

    <var name="QuitDialog::focus" propagate="yes" overwrite="no">0</var>
    <var name="focus">$QuitDialog::focus</var>    

    <signal name="FocusRegion::focus" 
            target="FocusGrab::Grab"/>
    <signal name="FocusRegion::focus" 
            target="GLWindow::mark_redraw"/>

    <object class="Box">
      <var name="color">#000000AA</var>
      <object class="Grid">
        <var name="rows">3</var>
        <var name="cols">3</var>
        <object class="ShadowedBox">
          <var name="row">2</var>
          <var name="col">2</var>
          <var name="cell-height">200</var>
          <var name="cell-width">400</var>

          <definition class="ShadowedBox::child">
            <object class="Frame" id="QuitDialog">
              <object class="Box" id="QuitDialog">
                <var name="color">$main_color</var>
                
                <object class="Texture">
                  <var name="file">BackgroundTile04.png</var>
                  <var name="color">#AAAAAAFF</var>
                  <var name="repeatx">1</var>
                  <var name="repeaty">1</var>
                </object>
                
                <object class="Texture">
                  <var name="file">BackgroundTile04.png</var>
                  <var name="color">#00000000</var>
                  <var name="repeatx">1</var>
                  <var name="repeaty">1</var>
                </object>
                
                <object class="Grid" id="filegrid1">
                  <var name="rows">3</var>
                  <var name="cols">5</var>
                  
                  <object class="Root::Text" id="title">
                    <var name="row">1</var>
                    <var name="col">3</var>
                    <var name="text">Quit?</var>
                    <var name="size">30</var>
                    <var name="fgcolor">#000000FF</var>
                    <var name="bgcolor">#FFFFFF80</var>
                    <var name="anchor">W</var>
                    <var name="offsetx">-2</var>
                    <var name="offsety">2</var>
                    <var name="anchor">C</var>
                    <var name="shadow">1</var>
                    <var name="cell-width">50</var>
                  </object>
                  
                  <object class="Button">
                    <var name="row">3</var>
                    <var name="col">2</var>
                    <var name="Button::color" propagate="yes">#FFEEEEFF</var>
                    <var name="Button::Text::text" propagate="yes">Cancel</var>
                    <signal name="Button::clicked" 
                            target="Arithmetic::set_value">
                      <var name="variable">$QuitDialog::visible</var>
                      <var name="value">0</var>
                    </signal>                      

                    <signal name="Button::clicked" 
                            target="Arithmetic::set_value">
                      <var name="variable">$QuitDialog::focus</var>
                      <var name="value">0</var>
                    </signal>                      

                    <signal name="Button::clicked" 
                            target="FocusGrab::Ungrab"/>

                    <signal name="Button::clicked" 
                            target="GLWindow::mark_redraw"/>


                  </object>
                  <object class="Button">
                    <var name="row">3</var>
                    <var name="col">4</var>
                    <var name="Button::color" propagate="yes">#EEFFEEFF</var>
                    <var name="Button::Text::text" propagate="yes">OK</var>
                    <signal name="Button::clicked" 
                            target="Quit"/>
                  </object>
                </object>
              </object>
            </object>
          </definition>
        </object>
      </object>
    </object>
  </object>
</definition>
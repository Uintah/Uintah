<definition class="LayerMenuBar" xmlns:xi="http://www.w3.org/2001/XInclude">
  <object class="Frame">
    <var name="invert">1</var>
    <var name="width">2</var>
    <var name="height">2</var>
    <object class="Box">
      <var name="color">$main_color</var>
      
      <object class="Grid">
        <var name="rows">1</var>
        <var name="cols">1</var>
        <var name="text_bgcolor" propagate="yes">#FFFFFFFF</var>
        <var name="text_fgcolor" propagate="yes">#000000FF</var>
        
        <var name="cell-height">35</var>
        
        <var name="ThisMenuVisible" propagate="yes">1</var>
        <object class="MenuButton">
          <var name="row">1</var>
          <var name="col">1</var>
          <var name="Button::Text::text" propagate="yes"> Layer...</var>
          <var name="text_color" propagate="yes">$text_fgcolor</var>
          <signal name="Button::clicked" 
                  target="MenuManager::show_MenuList">
            <var name="id">LayerMenu</var>
          </signal>
        </object>        
      </object>
    </object>
  </object>      
</definition>

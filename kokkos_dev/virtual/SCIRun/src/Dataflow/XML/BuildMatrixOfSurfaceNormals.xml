<component name="BuildMatrixOfSurfaceNormals" category="MiscField">
  <overview>
    <authors>
      <author>Martin Cole</author>
    </authors>
    <summary>The BuildMatrixOfSurfaceNormals calculates area weighted normal Vectors per node.</summary>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <!-- one of (device port file) -->
      <port>
	<name>Surface Field</name>
	<description>
	  <p>
             Accepts only surface fields.
          </p>
	</description>
	<datatype>SCIRun::Field</datatype>
      </port>
    </inputs>
    <outputs>
      <!-- one of (device port file) -->
      <port>
	<name>Nodal Surface Normals</name>
	<description>
	  <p>DenseMatrix of Vectors, one per node in input.</p>
	</description>
	<datatype>SCIRun::Matrix</datatype>
      </port>
    </outputs>
  </io>
 </component>

<component name="PVSpaceInterp" category="Fields">
  <overview>
    <authors>
      <author>Martin Cole</author>
    </authors>
    <summary>
      Interpolation between FE Meshes by HIP data input.
    </summary>
    <description>
      <p> Interpolation between UCSD FE models and UW HIP model over
          time. Producing real time display of precomputed FE models.
      </p>
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <!-- one of (device port file) -->
      <port>
	<name>Time</name>
	<description>
	  <p>Global time synchronization.</p>
	</description>
	<datatype>SCIRun::Time</datatype>
      </port>
      <port>
	<name>HIP Data</name>
	<description>
	  <p>HIP input data.</p>
	</description>
	<datatype>SCIRun::Nrrd</datatype>
      </port>
      <port>
	<name>Interpolation Space</name>
	<description>
	  <p>set of interpolation fields in nrrd format</p>
	</description>
	<datatype>SCIRun::Nrrd</datatype>
      </port>
      <port>
	<name>Connectivity</name>
	<description>
	  <p>
             Field with the same connectivity of meshes in interpolation space.
          </p>
	</description>
	<datatype>SCIRun::Field</datatype>
      </port>
      <port>
	<name>Potential Curves</name>
	<description>
	  <p>bundle of matrix of per node curves per frequency.</p>
	</description>
	<datatype>SCIRun::Bundle</datatype>
      </port>
      <port>
	<name>PPV Space</name>
	<description>
	  <p>meshes that describe the ppv space.</p>
	</description>
	<datatype>SCIRun::Bundle</datatype>
      </port>
    </inputs>
    <outputs>
      <port>
	<name>Current Mechanical</name>
	<description>
	  <p>The interpolated Field that belongs to the current time. (mechanical)</p>
	</description>
	<datatype>SCIRun::Field</datatype>
      </port>
      <port>
	<name>Current Electrical</name>
	<description>
	  <p>The interpolated Field that belongs to the current time. (electrical)</p>
	</description>
	<datatype>SCIRun::Field</datatype>
      </port>
      <!-- one of (device port file) -->
    </outputs>
  </io>
  <gui>
    <description>
    </description>
    <parameter>
      <widget></widget>
      <datatype></datatype>
      <label></label>
      <description>
      </description>
    </parameter>
  </gui>
  <nets>
    <net>
      <title></title>
    </net>
  </nets>
</component>
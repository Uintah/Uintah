<?cocoon-process type="xslt"?>

<component name="PatchDataVisualizer" category="Visualization">
  <overview>
    <authors>
      <author>James Bigler</author>
    </authors>
    <summary>Display patch centers.</summary>
    <description>
      <p>Version Date: Mon Jan 17 14:15:55 MDT 2001</p><p>Version: 1.0</p>
      <p> This module merely places a sphere at the center of each patch.</p>
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>Data Archive</name>
        <datatype>Uintah::Archive</datatype>
      </port>
     <port>
       <name>ColorMap</name>
       <datatype>SCIRun::ColorMap</datatype>
     </port>
    </inputs>
    <outputs>
      <port>
        <name>Geometry</name>
        <datatype>SCIRun::Geometry</datatype>
      </port>
   </outputs>
  </io>
</component>

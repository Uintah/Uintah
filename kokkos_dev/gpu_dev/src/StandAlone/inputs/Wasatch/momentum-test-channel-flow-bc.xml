<Uintah_specification>

  <Meta>
    <title>Momentum Test with Boundary Conditions</title>
  </Meta>

  <SimulationComponent type="wasatch"/>
   <Solver type="hypre" />
  <Wasatch>

    <!-- Set the initial condition expression for x-momentum -->
    <BasicExpression type="XVOL">
       <TaskList>initialization</TaskList>
       <NameTag name="x-mom" state="STATE_N" />
       <Constant>1.0</Constant>
    </BasicExpression>

    <BasicExpression type="YVOL">
       <TaskList>initialization</TaskList>
       <NameTag name="y-mom" state="STATE_N" />
       <Constant>0.0</Constant>
    </BasicExpression>
               
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="density" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>
    
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="viscosity" state="STATE_N" />
      <Constant>0.001</Constant>
    </BasicExpression>
    
    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="viscosity" state="STATE_N" />
      <Constant>0.001</Constant>
    </BasicExpression>

    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="density" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>

    <!-- Momentum transport equations -->
    <MomentumEquations>
      <X-Velocity>u</X-Velocity>
      <X-Momentum>x-mom</X-Momentum>
      <Y-Velocity>v</Y-Velocity>
      <Y-Momentum>y-mom</Y-Momentum>
      <!--Viscosity>
        <NameTag name="viscosity" state="STATE_N" />
      </Viscosity-->
      
      <Pressure>
        <Parameters>

            <!-- CGSolver options -->
              <norm>     LInfinity  </norm>
              <criteria> Absolute   </criteria>

            <!-- Hypre options -->
            <solver>         cg      </solver>
            <preconditioner> pfmg    </preconditioner>
            <tolerance>      1.e-2  </tolerance>
            <maxiterations>  10    </maxiterations>
            <npre>           1       </npre>
            <npost>          1       </npost>
            <skip>           0       </skip>
            <jump>           0       </jump>
           </Parameters>

      </Pressure>
    </MomentumEquations>


  </Wasatch>


  <Time>
    <maxTime>0.3</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.001</delt_min>
    <delt_max>0.001</delt_max>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>


  <DataArchiver>
    <filebase>momentum-test-bc-channel.uda</filebase>
    <outputTimestepInterval>1</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle = "2" interval = "0.001"/>
    <compression>gzip</compression>
    <save label="x-mom"/>
    <save label="y-mom"/>
    <save label="u"/>
    <save label="v"/>
    <save label="pressure"/>
    <save label="x-mom_convFlux_x"/>
    <save label="x-mom_convFlux_y"/>
    <save label="y-mom_convFlux_x"/>
    <save label="y-mom_convFlux_y"/>
    <!--save label="dilatation"/-->
    <save label="density"/>
    <!-- save label="tau_xx"/>
    <save label="tau_xy"/>
    <save label="tau_yy"/>
    <save label="tau_yx"/ -->
    <save label="x-mom_rhs_partial"/>
    <save label="y-mom_rhs_partial"/>
    <save label="x-mom_rhs_full"/>
    <save label="y-mom_rhs_full"/>

  </DataArchiver> 

  <Grid>
      <BoundaryConditions>
      <!-- BOUNDARY CONDITIONS FOR MOMENTUM -->
      <Face side="x-">
        <BCType id="all" var="Dirichlet" label="density">
          <value> 1.0 </value>
        </BCType>

        <BCType id="all" var="Dirichlet" label="viscosity">
          <value> 0.001 </value>
        </BCType>

        <BCType id="all" var="Dirichlet" label="u">
          <value> 1.0 </value>
        </BCType>
        
        <BCType id="all" var="Dirichlet" label="v">
          <value> 0.0 </value>
        </BCType>
      
        <BCType id="all" var="Dirichlet" label="x-mom">
          <value> 1.0 </value>
        </BCType>
        
        <BCType id="all" var="Dirichlet" label="y-mom">
          <value> 0.0 </value>
        </BCType>
        
        <BCType id="all" var="Neumann" label="tau_xx">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="x-mom_convFlux_x">
          <value> 1.0 </value>
        </BCType>
        
        <BCType id="all" var="Neumann" label="pressure">
          <value> 10.0 </value>
        </BCType>        
                                
      </Face>
      
      <Face side="x+">
        <BCType id="all" var="Dirichlet" label="density">
          <value> 1.0 </value>
        </BCType>

        <BCType id="all" var="Dirichlet" label="viscosity">
          <value> 0.001 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="u">
          <value> 0.0 </value>
        </BCType>
        
        <BCType id="all" var="Dirichlet" label="v">
          <value> 0.0 </value>
        </BCType>
      
        <BCType id="all" var="Neumann" label="x-mom">
          <value> 0.0 </value>
        </BCType>
        
        <BCType id="all" var="Dirichlet" label="y-mom">
          <value> 0.0 </value>
        </BCType>
        
        <BCType id="all" var="Neumann" label="tau_xx">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="x-mom_convFlux_x">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="pressure">
          <value> 10.0 </value>
        </BCType>        
                        
      </Face>
      
      <Face side="y-">
        <BCType id="all" var="Dirichlet" label="density">
          <value> 1.0 </value>
        </BCType>

        <BCType id="all" var="Dirichlet" label="viscosity">
          <value> 0.001 </value>
        </BCType>
        
        <BCType id="all" var="Dirichlet" label="u">
          <value> 0.0 </value>
        </BCType>
        
        <BCType id="all" var="Dirichlet" label="v">
          <value> 0.0 </value>
        </BCType>
      
        <BCType id="all" var="Dirichlet" label="x-mom">
          <value> 0.0 </value>
        </BCType>
        
        <BCType id="all" var="Dirichlet" label="y-mom">
          <value> 0.0 </value>
        </BCType>
        
        <BCType id="all" var="Neumann" label="tau_yy">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="y-mom_convFlux_y">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="pressure">
          <value> 10.0 </value>
        </BCType>        
                        
      </Face>
      
      <Face side="y+">
        <BCType id="all" var="Dirichlet" label="density">
          <value> 1.0 </value>
        </BCType>

        <BCType id="all" var="Dirichlet" label="viscosity">
          <value> 0.001 </value>
        </BCType>

        <BCType id="all" var="Dirichlet" label="u">
          <value> 0.0 </value>
        </BCType>
        
        <BCType id="all" var="Dirichlet" label="v">
          <value> 0.0 </value>
        </BCType>
      
        <BCType id="all" var="Dirichlet" label="x-mom">
          <value> 0.0 </value>
        </BCType>
        
        <BCType id="all" var="Dirichlet" label="y-mom">
          <value> 0.0 </value>
        </BCType>
        
        <BCType id="all" var="Neumann" label="tau_yy">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="y-mom_convFlux_y">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Dirichlet" label="pressure">
          <value> 0.0 </value>
        </BCType>        
                        
      </Face>

      </BoundaryConditions>
      <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[1,0.25,0.1]</upper>
        <resolution>[128,32,2]</resolution>
        <patches>[1,1,1]</patches>
      </Box>
      <periodic>[0,0,1]</periodic>
    </Level>
  </Grid>

</Uintah_specification>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component SYSTEM "../../../../Dataflow/XML/component.dtd">
<?xml-stylesheet href="../../../../Dataflow/XML/component.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<component name="ScalarFieldBinaryOperator" category="Operators">
  <overview>
    <authors>
      <author>James Bigler</author>
    </authors>
    <summary>Performs an operation on two scalar fields.</summary>
    <description>
      <p>Version Date: April 2002</p><p>Version: 1.0</p>
      <p> Takes two scalar fields as input.  Outputs a scalar field
      that is a value wise addition, subtraction, muliplication,
      division or average of the two input fields.</p>
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>Scalar Field Left Operand</name>
        <datatype>SCIRun::Field</datatype>
      </port>
      <port>
        <name>Scalar Field Right Operand</name>
        <datatype>SCIRun::Field</datatype>
      </port>
    </inputs>
    <outputs>
      <port>
       <name>Scalar Field</name>
        <datatype>SCIRun::Field</datatype>
      </port>
   </outputs>
  </io>
</component>

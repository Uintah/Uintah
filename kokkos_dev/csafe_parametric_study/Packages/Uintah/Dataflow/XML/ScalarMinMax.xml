<!DOCTYPE component SYSTEM "../../../../Dataflow/XML/component.dtd">
<?xml-stylesheet href="../../../../Dataflow/XML/component.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<component name="ScalarMinMax" category="Operators">
  <overview>
    <authors>
      <author>Kurt Zimmerman</author>
    </authors>
    <summary>Find the maximum and minimum values in a scalar field.</summary>
    <description>
      <p>Version Date: March 2004</p><p>Version: 1.0</p>
      <p>This is an information module that finds the minimum and
      maximum values in a scalar field.  It also displays an indices
      that corresponds to those values and a count of values.</p>
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>Scalar Field</name>
        <datatype>SCIRun::Field</datatype>
      </port>
    </inputs>
    <outputs>
    </outputs>
  </io>
</component>

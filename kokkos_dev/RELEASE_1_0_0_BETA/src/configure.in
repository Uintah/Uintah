  elif test -n "`ls -1r /usr/local/lib/libBLT24.{so,a} 2> /dev/null | head -n 1`";  then
    BLT_PREFIX=/usr/local
  elif test -n "`ls -1r /usr/lib/libBLT24.{so,a} 2> /dev/null | head -n 1`"; then
    BLT_PREFIX=/usr
  fi
fi

if test "$BLT_PREFIX" ; then
  BLT_INCLUDE_DIR="$BLT_PREFIX/include"
  BLT_LIB_DIR="$BLT_PREFIX/lib"
  BLT_LIB_FLAG="-lBLT24"
  echo -L$BLT_LIB_DIR $BLT_LIB_FLAG $BLT_INCLUDE_DIR
else
  echo "not found -- must build"
  echo "  Implement me."
  exit 1
fi

if test ! -d "$BLT_INCLUDE_DIR" ||
   test ! -f "$BLT_INCLUDE_DIR/blt.h" ; then
  echo "Couldn't find the BLT include file.  exiting."
  exit 1
fi

AC_SUBST(BLT_INCLUDE_DIR)
AC_SUBST(BLT_LIB_DIR)
AC_SUBST(BLT_LIB_FLAG)

##-- Find Xerces-C  ------------------------------------------------------

echo -n "checking for Xerces-C 1.X... "

if test "$xerces" &&
   test -n "`ls -1r $xerces/lib/libxerces-c1_?.so 2> /dev/null | head -n 1`"; then
  XML_LIB_DIR=$xerces/lib
fi

if test -z "$XML_LIB_DIR"; then
  if test -n "`ls -1r $thirdparty/lib/libxerces-c1_?.so 2> /dev/null | head -n 1`"; then
    XML_LIB_DIR="$thirdparty/lib"
  elif test -n "`ls -1r /usr/local/lib/libxerces-c1_?.so 2> /dev/null | head -n 1`"; then 
    XML_LIB_DIR="/usr/local/lib"
  elif test -n "`ls -1r /usr/lib/libxerces-c1_?.so 2> /dev/null | head -n 1`"; then 
    XML_LIB_DIR="/usr/lib"
  fi
fi

if test -z "$XML_LIB_DIR"; then
  echo "Couldn't find a Xerces-C library.  exiting."
  exit 1
fi

echo $XML_LIB_DIR
if (test $XML_LIB_DIR &&
    test -d "$XML_LIB_DIR/../util" &&
    test -d "$XML_LIB_DIR/../sax" &&
    test -d "$XML_LIB_DIR/../dom" &&
    test -d "$XML_LIB_DIR/../parsers") ; then
  XML_INCLUDE_DIR="$XML_LIB_DIR/.."
else
  echo "Couldn't find the Xerces-C headers.  exiting."
  exit 1
fi

XML_LIB_FLAG="`ls -1 $XML_LIB_DIR/libxerces-c1_?.so |\
	      sort -r | head -n 1 |  sed -e's,lib,,g' -e 's,.so,,g'`"
XML_LIB_FLAG="-l`basename $XML_LIB_FLAG`"

echo "-L$XML_LIB_DIR $XML_LIB_FLAG"

AC_SUBST(XML_LIB_DIR)
AC_SUBST(XML_LIB_FLAG)
AC_SUBST(XML_INCLUDE_DIR)


##-- Find Nrrd ------------------------------------------------------

nrrd_pkg="no"
for i in $package; do
  if test "$i" = "Nrrd" ; then
    nrrd_pkg="yes"
    if test -e "$thirdparty/include/nrrd.h" ; then
      NRRD_PREFIX=$thirdparty
    fi
  fi
done

if test "${nrrd_pkg}" = "yes" ; then
  if test "${with_nrrd+set}" = set; then
    withval="$with_nrrd"
    if test "$withval" != "yes" ; then
      if test -e "${withval}/include/nrrd.h"; then
        NRRD_PREFIX="$withval"
      else
        echo "\n*** Error - could not find ${withval}/include/nrrd.h\n"
        nrrd_pkg="no"
      fi
    else
      echo "Remark: ignoring pathless with-nrrd flag"
    fi
  fi
fi

if test "${nrrd_pkg}" = "yes" ; then
  echo -n "checking for nrrd... "
  if test "$NRRD_PREFIX" ; then
    NRRD_INCLUDE="-I${NRRD_PREFIX}/include"
    NRRD_LIB_DIR="${NRRD_PREFIX}/lib"
    echo "${NRRD_PREFIX}"
  else
    echo "no"
  fi
fi

AC_SUBST(NRRD_INCLUDE)
AC_SUBST(NRRD_LIB_DIR)



##-- Find MPI ----------------------------------------------------------------

AC_ARG_WITH(mpi,
	[  --with-mpi=<path-to-mpi>  <path-to-mpi>],
	[mpi="$withval"],
	[mpi=""])

if test -z "$mpi"; then
  MPI_INCLUDE_DIR=""
  for trylib in mpi mpich; do
     echo -n "Looking for MPI in -l$trylib... "
     LIBS="$oldLibs -l$trylib"
     AC_TRY_LINK(
#include <mpi.h>
,
     int argc;
     char** argv;
     MPI_Init(&argc, &argv);
, mpi_dir=""; mpi_lib=$trylib; echo "found"; break, echo "not found")
  done
else
  oldcppflags=$CPPFLAGS
  MPI_INCLUDE_DIR=$mpi/include
  CPPFLAGS="$CPPFLAGS -I$MPI_INCLUDE_DIR"
  oldLibs=$LIBS
  for trydir in lib lib32 lib64; do
     for trylib in mpi mpich; do
        echo -n "Looking for MPI in -L$mpi/$trydir -l$trylib... "
        LIBS="$oldLibs -L$mpi/$trydir -l$trylib"
        AC_TRY_LINK(
#include <mpi.h>
,
	int argc;
	char** argv;
	MPI_Init(&argc, &argv);
, mpi_dir=$mpi/$trydir; mpi_lib=$trylib; echo "found"; break 2, echo "not found")
     done
  done
  LIBS=$oldLibs
  CPPFLAGS=$oldcppflags
fi

MPI_LIB_DIR=$mpi_dir
MPI_LIB_FLAG="-l$mpi_lib"

AC_SUBST(MPI_LIB_DIR)
AC_SUBST(MPI_LIB_FLAG)
AC_SUBST(MPI_INCLUDE_DIR)


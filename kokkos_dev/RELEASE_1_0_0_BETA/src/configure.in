   test ! -f "$TCL_SRC_DIR/generic/tcl.h" ||
   test ! -f "$TCL_SRC_DIR/generic/tclPort.h" ||
   test ! -f "$TCL_SRC_DIR/generic/tclMath.h" ||
   test ! -f "$TCL_SRC_DIR/generic/tclInt.h"; then

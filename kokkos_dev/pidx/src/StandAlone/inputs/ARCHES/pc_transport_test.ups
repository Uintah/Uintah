<?xml version="1.0" encoding="iso-8859-1"?>
<!-- DOCTYPE Uintah_specification SYSTEM "input.dtd" -->
<!-- @version: -->
<Uintah_specification>
  <Meta>
    <title>PC Transport Test</title>
  </Meta>

  <SimulationComponent type="arches"/>

  <Solver type="hypre"/>
  <Time>
    <maxTime>0.1</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.00001</delt_min>
    <delt_max>5</delt_max>
    <timestep_multiplier>0.1</timestep_multiplier>
  </Time>

  <DataArchiver>
    <filebase>pc_transport.uda</filebase>
    <outputInterval>0.01</outputInterval>
    <!-- transported variables --> 
    <save label="pc_0"/>
    <save label="pc_1"/>
    <save label="pc_2"/>
    <!-- sources --> 
    <save label="pc_src_0"/>
    <save label="pc_src_1"/>
    <save label="pc_src_2"/>

    <checkpoint cycle="2" interval="0.05"/>
    <compression>gzip</compression>
  </DataArchiver>

  <Grid>
    <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[1.0,1.0,3.0]</upper>
        <resolution>[8,8,8]</resolution>
        <extraCells>[0,0,0]</extraCells>
        <patches>[1,1,1]</patches>
      </Box>
      <periodic>[1,1,1]</periodic>
    </Level>
  </Grid>

  <PhysicalConstants>
    <gravity>[0,0,0]</gravity>
    <reference_point>[0,0,0]</reference_point>
    <viscosity>0.0</viscosity>
  </PhysicalConstants>

  <CFD>
<!-- ARCHES specification -->
    <ARCHES>

      <TimeIntegrator>
        <ExplicitIntegrator order="first"/>
      </TimeIntegrator>

      <TransportEqns>
        <Eqn label="mixture_fraction" type="CCscalar">
          <doDiff>true</doDiff>
          <doConv>true</doConv>
          <conv_scheme>super_bee</conv_scheme>
          <addSources>false</addSources>
          <determines_properties/>
          <initialization type="constant">
            <constant>0.0</constant>
          </initialization>
          <Clipping>
            <low>0.0</low>
            <high>1.0</high>
          </Clipping>
        </Eqn>

        <Eqn label="pc_0" type="CCscalar">
          <doDiff>true</doDiff>
          <doConv>true</doConv>
          <conv_scheme>upwind</conv_scheme>
          <addSources>true</addSources>
          <initialization type="constant">
            <constant>1.0</constant>
          </initialization>
          <src label="pc_src_0"/>
        </Eqn>
        <Eqn label="pc_1" type="CCscalar">
          <doDiff>true</doDiff>
          <doConv>true</doConv>
          <conv_scheme>upwind</conv_scheme>
          <addSources>true</addSources>
          <initialization type="constant">
            <constant>2.0</constant>
          </initialization>
          <src label="pc_src_1"/>
        </Eqn>
        <Eqn label="pc_2" type="CCscalar">
          <doDiff>true</doDiff>
          <doConv>true</doConv>
          <conv_scheme>upwind</conv_scheme>
          <addSources>true</addSources>
          <initialization type="constant">
            <constant>3.0</constant>
          </initialization>
          <src label="pc_src_2"/>
        </Eqn>

        <Sources>
          <src label="pc_src_0" type="pc_transport">
            <pc_scal_file>string_1</pc_scal_file>
            <pc_st_scal_file>string_2</pc_st_scal_file>
            <svm_model_base_name>string_3</svm_model_base_name>
            <n_pcs>3</n_pcs>
            <n_sts>1</n_sts>
            <n_ind>2</n_ind>
            <n_tot>3</n_tot>
            <pc label="pc_0" score_number="0"/>
            <pc label="pc_1" score_number="1"/>
            <pc label="pc_2" score_number="2"/>
          </src>
          <src label="pc_src_1" type="pc_transport">
            <pc_scal_file>string_1</pc_scal_file>
            <pc_st_scal_file>string_2</pc_st_scal_file>
            <svm_model_base_name>string_3</svm_model_base_name>
            <n_pcs>3</n_pcs>
            <n_sts>1</n_sts>
            <n_ind>2</n_ind>
            <n_tot>3</n_tot>
            <pc label="pc_0" score_number="0"/>
            <pc label="pc_1" score_number="1"/>
            <pc label="pc_2" score_number="2"/>
          </src>
          <src label="pc_src_2" type="pc_transport">
            <pc_scal_file>string_1</pc_scal_file>
            <pc_st_scal_file>string_2</pc_st_scal_file>
            <svm_model_base_name>string_3</svm_model_base_name>
            <n_pcs>3</n_pcs>
            <n_sts>1</n_sts>
            <n_ind>2</n_ind>
            <n_tot>3</n_tot>
            <pc label="pc_0" score_number="0"/>
            <pc label="pc_1" score_number="1"/>
            <pc label="pc_2" score_number="2"/>
          </src>
        </Sources>

      </TransportEqns>

      <Properties>
        <use_mixing_model>false</use_mixing_model>
        <ColdFlow>
          <mixture_fraction_label>mixture_fraction</mixture_fraction_label>
          <Stream_1>
            <density>1.00</density>
            <temperature>298</temperature>
          </Stream_1>
          <Stream_2>
            <density>1.00</density>
            <temperature>298</temperature>
          </Stream_2>
        </ColdFlow>
      </Properties>

<!--
      <BoundaryConditions>
      </BoundaryConditions>

-->
      <ExplicitSolver>
        <initial_dt>1</initial_dt>
        <variable_dt>true</variable_dt>
        <PressureSolver>
          <Parameters>
            <solver>           cg     </solver>
            <preconditioner>  pfmg    </preconditioner>
            <tolerance>      1.0e-10  </tolerance>
            <maxiterations>    75     </maxiterations>
            <skip>              1     </skip>
          </Parameters>
        </PressureSolver>

        <MomentumSolver>
          <convection_scheme>central</convection_scheme>
        </MomentumSolver>

        <MixtureFractionSolver>
          <convection_scheme>central-upwind</convection_scheme>
        </MixtureFractionSolver>

      </ExplicitSolver>
    </ARCHES>

  </CFD>

</Uintah_specification>

@OGL_ERR_MACRO@
#if defined(OGL_DBG)
#define CHECK_OPENGL_ERROR(x)                                           \
   {                                                                    \
    GLenum errCode;                                                     \
    int cnt = 1;                                                        \
    while ((errCode = glGetError()) != GL_NO_ERROR) {                   \
      std::cerr<< "OpenGL Error(" << cnt << "):"                        \
          << __FILE__ << ":" << __LINE__ << " '"                        \
	  << (const char*)gluErrorString(errCode) << "'" << std::endl;  \
    }                                                                   \
  }
#else
#define CHECK_OPENGL_ERROR(x) 
#endif

#endif


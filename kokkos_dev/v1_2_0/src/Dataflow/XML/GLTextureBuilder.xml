<component name="GLTextureBuilder" category="Visualization">
  <overview>
    <authors>
      <author>Kurt Zimmerman</author>
    </authors>
    <summary>Builds an octree based texture with power of 2 size nodes
    suitable for OpenGL volume rendering.</summary>
    <description>
      <p>You can select auto scale or specify a fixed scale for the
      transfer function.</p>
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>Field</name>
	<datatype>SCIRun::Field</datatype>
      </port>
    </inputs>
    <outputs>
      <port>
        <name>GL Texture</name>
	<datatype>SCIRun::GLTexture3D</datatype>
      </port>
   </outputs>
  </io>
  <gui>
    <img>../Modules/Visualization/doc/GLTextureBuilder.jpg</img>
  </gui>
  <testing>
  </testing>
</component>

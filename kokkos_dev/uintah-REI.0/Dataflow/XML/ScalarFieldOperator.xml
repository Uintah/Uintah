<!DOCTYPE component SYSTEM "../../../../Dataflow/XML/component.dtd">
<?xml-stylesheet href="../../../../Dataflow/XML/component.xsl" type="text/xsl"?>
<?cocoon-process type="xslt"?>

<component name="ScalarFieldOperator" category="Operators">
  <overview>
    <authors>
      <author>Wayne Witzel</author>
    </authors>
    <summary>Apply the exponential or log function to a scalar field.</summary>
    <description>
      <p>Version Date: November 2000</p><p>Version: 1.0</p>
      <p>Apply exponential or log functions to each value in the
      scalar field.  No-op = no operation is provided for convenience.</p>
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>Scalar Field</name>
        <datatype>SCIRun::Field</datatype>
      </port>
    </inputs>
    <outputs>
      <port>
       <name>Scalar Field</name>
        <datatype>SCIRun::Field</datatype>
      </port>
   </outputs>
  </io>
</component>

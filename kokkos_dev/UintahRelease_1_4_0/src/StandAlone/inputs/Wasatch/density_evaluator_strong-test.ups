<Uintah_specification>

  <Meta>
    <title>Test Density_Evaluator for Wasatch</title>
  </Meta>

  <SimulationComponent type="wasatch"/>

  <Wasatch>
    
    <Density>
      <IsConstant>false</IsConstant>
      <NameTag name="rho" state="STATE_NONE" /> 
    </Density>
    
    <!-- Set the initial condition expression for mixture fraction -->
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="f" state="STATE_NONE" />
      <SineFunction amplitude="0.45" frequency="15.7" offset="0.45">
        <NameTag name="XSVOL" state="STATE_NONE" />
      </SineFunction>
    </BasicExpression>
    
    <!-- Set the initial condition expression for heat loss -->
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="lambda" state="STATE_N" />
      <Constant> 0.2 </Constant>
      <!-- SineFunction amplitude="0.9" frequency="15.7" offset="0.0" -->
        <!-- NameTag name="YSVOL" state="STATE_NONE" / -->
      <!-- /SineFunction -->
    </BasicExpression>    
            
    <!-- Set up a tabular property evaluation to extract density for initialization-->
    <TabProps>
      <FileNamePrefix>inputs/Wasatch/FastChem</FileNamePrefix>
      <TaskList>initialization</TaskList>
      <IndependentVariable>
        <NameTag name="f" state="STATE_NONE" />
        <NameInTable>MixtureFraction</NameInTable>
      </IndependentVariable>
      
      <IndependentVariable>
        <NameTag name="lambda" state="STATE_N" />
        <NameInTable>HeatLoss</NameInTable>
      </IndependentVariable>
      
      <ExtractDensity>
        <NameInTable>Density</NameInTable>
      </ExtractDensity>
      
    </TabProps>
	
	<!-- CREATE AN EXPRESSION FOR HEAT LOSS -->
    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="lambda" state="STATE_N" />
      <Constant> 0.2 </Constant>
      <!-- SineFunction amplitude="0.9" frequency="15.7" offset="0.0" -->
        <!-- NameTag name="YSVOL" state="STATE_NONE" / -->
      <!-- /SineFunction -->
    </BasicExpression>

    <!-- Set up a tabular property evaluation to extract density within the advance_solution-->
    <TabProps>
      <FileNamePrefix>inputs/Wasatch/FastChem</FileNamePrefix>
      <TaskList>advance_solution</TaskList>
      <IndependentVariable>
        <NameTag name="f" state="STATE_NONE" />
        <NameInTable>MixtureFraction</NameInTable>
      </IndependentVariable>
      
      <IndependentVariable>
        <NameTag name="lambda" state="STATE_N" />
        <NameInTable>HeatLoss</NameInTable>
      </IndependentVariable>
      
      <ExtractDensity>
        <NameInTable>Density</NameInTable>
        <DensityWeightedIVar>
          <NameTag name="rhof" state="STATE_N" />
          <RelatedIVar>
            <NameTag name="f" state="STATE_NONE" />
          </RelatedIVar>
        </DensityWeightedIVar>
      </ExtractDensity>
      
    </TabProps>
        
    <!-- Build a scalar transport equation for mixture fraction -->
    <TransportEquation equation="generic">

      <SolutionVariable>rhof</SolutionVariable>
      <StrongForm>true</StrongForm>
      <PrimitiveVariable>f</PrimitiveVariable>

      <DiffusiveFluxExpression>
        <Direction>X</Direction>
        <ConstantDiffusivity>0.1</ConstantDiffusivity>
      </DiffusiveFluxExpression>

      <DiffusiveFluxExpression>
        <Direction>Y</Direction>
        <ConstantDiffusivity>0.2</ConstantDiffusivity>
      </DiffusiveFluxExpression>

      <DiffusiveFluxExpression>
        <Direction>Z</Direction>
        <ConstantDiffusivity>0.3</ConstantDiffusivity>
      </DiffusiveFluxExpression>

    </TransportEquation>   

    
  </Wasatch>


  <Time>
    <maxTime>0.002</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.0001</delt_min>
    <delt_max>0.0001</delt_max>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>


  <DataArchiver>
    <filebase>density-eval-test.uda</filebase>
    <outputTimestepInterval>1</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle = "2" interval = "0.001"/>
    <compression>gzip</compression>
    <save label="f"/>
    <save label="lambda"/>
    <save label="rho"/>
    <save label="rhof"/>
  </DataArchiver> 

  <Grid>
      <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[3.141592653589793,3.141592653589793,0.01]</upper>
        <resolution>[100,100,2]</resolution>
        <patches>[3,3,1]</patches>
      </Box>
      <periodic>[1,1,1]</periodic>
    </Level>
  </Grid>

</Uintah_specification>

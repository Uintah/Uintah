<component name="ShowMatrix" category="Visualization">
  <overview>
    <authors>
      <author>McKay Davis</author>
    </authors>
    <summary></summary>
    <description>
      <p>ShowColorMap creates a geometry overlay containing the input
      colormap and numerical values for it's range.</p>
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="yes">
      <port>
	<name>ColorMap</name>
	<datatype>SCIRun::ColorMap</datatype>
      </port>
      <port>
	<name>Matrix</name>
	<datatype>SCIRun::Matrix</datatype>
      </port>
    </inputs>
    <outputs>
      <port>
	<name>Geometry</name>
	<datatype>SCIRun::Geometry</datatype>
      </port>
    </outputs>
  </io>
  <testing>
  </testing>
</component>

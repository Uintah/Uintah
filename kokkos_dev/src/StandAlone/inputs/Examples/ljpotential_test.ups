<?xml version='1.0' encoding='ISO-8859-1' ?>

<Uintah_specification>

   <Meta>
       <title>Lennard Jones Potential test</title>
   </Meta>

   <SimulationComponent type="ljpotentialtest" />

   <!--____________________________________________________________________-->
   <!--      T  I  M  E     V  A  R  I  A  B  L  E  S                      -->
   <!--____________________________________________________________________-->

   <Time>
       <maxTime>1.0</maxTime>
       <initTime>0.0</initTime>
       <delt_min>0.0</delt_min>
       <delt_max>0.1</delt_max>
       <delt_init>0.001</delt_init>
       <max_Timesteps>2</max_Timesteps>
       <timestep_multiplier>1</timestep_multiplier>

   </Time>
   
   
    <!--____________________________________________________________________-->
    <!--   O  U  P  U  T     V  A  R  I  A  B  L  E  S                      -->
    <!--____________________________________________________________________-->
    
   <DataArchiver>
       <filebase>ljpotentialtest.uda</filebase>
       <outputInterval>1</outputInterval>
       <save label = "p.x"/>
       <save label = "p.force"/>
       <save label = "p.accel"/>
       <save label = "p.velocity"/>
       <save label = "p.energy"/>
       <save label = "p.mass"/>
       <save label = "p.charge"/>
       <save label = "p.particleID"/>
       <checkpoint cycle = "2" interval = "1"/>
   </DataArchiver>

    <!--____________________________________________________________________-->
    <!--   S I M U LA T I O N     O P T I O N S                             -->
    <!--____________________________________________________________________-->
    
   <LoadBalancer type="DLB">
     <timestepInterval>2</timestepInterval>
     <dynamicAlgorithm>patchFactorParticles</dynamicAlgorithm>
   </LoadBalancer>


    <!--____________________________________________________________________-->
    <!--   L O A D - B A L A N C E R     O P T I O N S                      -->
    <!--____________________________________________________________________-->
    
   <LJPotentialTest>
      <coordinateFile>ljpotential_input.medium</coordinateFile>
      <numAtoms>4096</numAtoms>
      <boxSize>[45.04,45.04,45.04]</boxSize>
      <cutoffRadius>10.0</cutoffRadius>
      <R12>1.0E5</R12>
      <R6>1.0E3</R6>
   </LJPotentialTest>


    <!--____________________________________________________________________-->
    <!--   G R I D     S P E C I F C A T I O N                              -->
    <!--____________________________________________________________________-->
    
    <Grid>
       <Level>
           <Box label = "1">
              <lower>[0,0,0]</lower>
              <upper>[50,50,50]</upper>
              <resolution>[50,50,50]</resolution>
              <patches>[1,1,1]</patches>
           </Box>
       </Level>
    </Grid>

</Uintah_specification>


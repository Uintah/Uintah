<Uintah_specification>

  <Meta>
    <title>Lid Driven Cavity Problem</title>
  </Meta>

  <SimulationComponent type="wasatch"/>
   <Solver type="hypre"/>
  <Wasatch>
      <TimeIntegrator> FE </TimeIntegrator>

    <PostProcessingExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="vorticity_z" state="STATE_NONE"/>
      <Vorticity>
      <Component>Z</Component>
      <Vel1>
        <NameTag name="v" state="STATE_NONE"/>
      </Vel1>
      <Vel2>
        <NameTag name="u" state="STATE_NONE"/>
      </Vel2>
      </Vorticity>
    </PostProcessingExpression>

    <PostProcessingExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="vel_magnitude" state="STATE_NONE"/>
      <VelocityMagnitude>
      <XVelocity>
        <NameTag name="u" state="STATE_NONE"/>
      </XVelocity>
      <YVelocity>
        <NameTag name="v" state="STATE_NONE"/>
      </YVelocity>
      </VelocityMagnitude>
    </PostProcessingExpression>
    
    <ForceOnGraph tasklist="advance_solution">
      <NameTag name="vorticity_z" state="STATE_NONE"/>
      <NameTag name="vel_magnitude" state="STATE_NONE"/>
    </ForceOnGraph>

    <Reduction tasklist="advance_solution" op="sum" output="true">
      <NameTag name="p_sum" state="STATE_NONE"/>
      <Source type="SVOL">
				<NameTag name="pressure" state="STATE_NONE"/>
      </Source>
    </Reduction>

    <Reduction tasklist="advance_solution" op="max" output="true">
      <NameTag name="p_max" state="STATE_NONE"/>
      <Source type="SVOL">
				<NameTag name="pressure" state="STATE_NONE"/>
      </Source>
    </Reduction>

    <Reduction tasklist="advance_solution" op="min" output="true">
      <NameTag name="p_min" state="STATE_NONE"/>
      <Source type="SVOL">
				<NameTag name="pressure" state="STATE_NONE"/>
      </Source>
    </Reduction>

    <Reduction tasklist="advance_solution" op="max" output="true">
      <NameTag name="u_max" state="STATE_NONE"/>
      <Source type="XVOL">
				<NameTag name="u" state="STATE_NONE"/>
      </Source>
    </Reduction>

    <Reduction tasklist="advance_solution" op="min" output="true">
      <NameTag name="u_min" state="STATE_NONE"/>
      <Source type="XVOL">
				<NameTag name="u" state="STATE_NONE"/>
      </Source>
    </Reduction>

    <Reduction tasklist="advance_solution" op="min" output="true">
      <NameTag name="v_min" state="STATE_NONE"/>
      <Source type="YVOL">
				<NameTag name="v" state="STATE_NONE"/>
      </Source>
    </Reduction>
    
    <Reduction tasklist="advance_solution" op="max" output="true">
      <NameTag name="v_max" state="STATE_NONE"/>
      <Source type="YVOL">
				<NameTag name="v" state="STATE_NONE"/>
      </Source>
    </Reduction>

    <Reduction tasklist="advance_solution" op="max" output="true">
      <NameTag name="vort_max" state="STATE_NONE"/>
      <Source type="SVOL">
				<NameTag name="vorticity_z" state="STATE_NONE"/>
      </Source>
    </Reduction>
    
    <Density>
      <Constant value="1.0" name="density"/>
    </Density>

    <!-- Set the initial condition expression for x-momentum -->
    <BasicExpression type="XVOL">
       <TaskList>initialization</TaskList>
       <NameTag name="x-mom" state="STATE_NONE"/>
       <Constant>0.0</Constant>
    </BasicExpression>

    <BasicExpression type="YVOL">
       <TaskList>initialization</TaskList>
       <NameTag name="y-mom" state="STATE_NONE"/>
       <Constant>0.0</Constant>
    </BasicExpression>
                   
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="viscosity" state="STATE_NONE"/>
      <Constant>0.001</Constant>
    </BasicExpression>
    
    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="viscosity" state="STATE_NONE"/>
      <Constant>0.001</Constant>
    </BasicExpression>

    <!-- Momentum transport equations -->
    <MomentumEquations>
 	
      <X-Velocity>u</X-Velocity>
      <X-Momentum>x-mom</X-Momentum>
      <Y-Velocity>v</Y-Velocity>
      <Y-Momentum>y-mom</Y-Momentum>
      <Viscosity>
        <NameTag name="viscosity" state="STATE_NONE"/>
      </Viscosity>
      
      <Pressure>
        <!-- ReferencePressure value="0.0">
              <ReferenceCell>[0,0,0]</ReferenceCell>
        </ReferencePressure -->
        <Use3DLaplacian>    false</Use3DLaplacian>
        <Parameters>
 	 	 	 	 	 	 <skip>1</skip>
            <solver>         cg      </solver>
            <preconditioner> pfmg    </preconditioner>
            <tolerance>      1e-14  </tolerance>
            <maxiterations>  1000    </maxiterations>
            <relax_type>     2       </relax_type>
           </Parameters>

      </Pressure>
    </MomentumEquations>

  </Wasatch>


  <Time>
    <maxTime>60</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.0001</delt_min>
    <delt_max>0.0001</delt_max>
    <max_Timesteps> 5 </max_Timesteps>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>


  <DataArchiver>
    <filebase>reduction-test.uda</filebase>
    <outputTimestepInterval>1</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle="2" interval="0.0001"/>
    <compression>gzip</compression>
    <save label="x-mom"/>
    <save label="y-mom"/>
    <save label="u"/>
    <save label="v"/>
    <save label="pressure"/>
    <save label="dilatation"/>
    <save label="vorticity_z"/>
    <save label="vel_magnitude"/>        
    <save label="p_sum_uintah"/>    
  </DataArchiver> 

  <Grid>
      <BoundaryConditions>
      <DefaultMaterial>all</DefaultMaterial>      
      <Face side="x-" type="Wall"/>
      <Face side="x+" type="Wall"/>
      <Face side="y-" type="Wall"/>
      <Face side="y+" type="Velocity">
        <BCType label="x-mom" var="Dirichlet" value="1"/>
        </Face>
      </BoundaryConditions>
      <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[1,1,0.01]</upper>
        <resolution>[64,64,2]</resolution>
        <!--extraCells>[1,1,0]</extraCells-->
        <patches>[2,2,1]</patches>
      </Box>
      <periodic>[0,0,1]</periodic>
    </Level>
  </Grid>

</Uintah_specification>

<Uintah_specification>

  <Meta>
    <title>Test upwind convection in each direction, also test multiple patches per process</title>
  </Meta>

  <SimulationComponent type="wasatch"/>

  <Wasatch>

    <!-- Set the initial condition for non-staggered scalar -->
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="phix-scalar" state="STATE_N" />
      <SineFunction amplitude="10.0" frequency="3.14" offset="0.0">
         <NameTag name="XSVOL" state="STATE_NONE" />
       </SineFunction>
    </BasicExpression>

    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="phiy-scalar" state="STATE_N" />
      <SineFunction amplitude="10.0" frequency="3.14" offset="0.5">
         <NameTag name="YSVOL" state="STATE_NONE" />
       </SineFunction>
    </BasicExpression>

    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="phiz-scalar" state="STATE_N" />
      <SineFunction amplitude="10.0" frequency="3.14" offset="0.0">
         <NameTag name="ZSVOL" state="STATE_NONE" />
       </SineFunction>
    </BasicExpression>
    
    <!-- CREATE AN EXPRESSION FOR THE VELOCITY FIELD -->
    <BasicExpression type="XVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="advective-velocity-x" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>
    
    <!-- CREATE AN EXPRESSION FOR THE VELOCITY FIELD -->
    <BasicExpression type="YVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="advective-velocity-y" state="STATE_N" />
      <Constant>0.5</Constant>
    </BasicExpression>
    
    <!-- CREATE AN EXPRESSION FOR THE VELOCITY FIELD -->
    <BasicExpression type="ZVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="advective-velocity-z" state="STATE_N" />
      <Constant>-1.0</Constant>
    </BasicExpression>
    
    <TransportEquation equation="generic">
      <SolutionVariable>phix-scalar</SolutionVariable>
      <ConvectiveFluxExpression>
        <Method>UPWIND</Method> 
        <Direction>X</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-x" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>
    </TransportEquation>

    <TransportEquation equation="generic">
      <SolutionVariable>phiy-scalar</SolutionVariable>
      <ConvectiveFluxExpression>
        <Method>UPWIND</Method> 
        <Direction>Y</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-y" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>
    </TransportEquation>

    <TransportEquation equation="generic">
      <SolutionVariable>phiz-scalar</SolutionVariable>
      <ConvectiveFluxExpression>
        <Method>UPWIND</Method> 
        <Direction>Z</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-z" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>
    </TransportEquation>

  </Wasatch>


  <Time>
    <maxTime>0.5</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.01</delt_min>
    <delt_max>0.025</delt_max>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>


  <DataArchiver>
    <filebase>convection-test3.uda</filebase>
    <outputTimestepInterval>1</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle = "2" interval = "0.04"/>
    <compression>gzip</compression>
    <save label="phix-scalar"/>
    <save label="phiy-scalar"/>
    <save label="phiz-scalar"/>
  </DataArchiver> 

  <Grid>
    <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[2,2,2]</upper>
        <resolution>[12,12,12]</resolution>
        <patches>[2,3,2]</patches>
      </Box>
      <periodic>[1,1,1]</periodic>
    </Level>
  </Grid>

</Uintah_specification>

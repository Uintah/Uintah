<Uintah_specification>

  <Meta>
    <title>Test Boundary Conditions</title>
  </Meta>

  <SimulationComponent type="wasatch"/>

  <Wasatch>
  <TimeIntegrator>RK3SSP</TimeIntegrator>

    <!-- Set the initial condition for non-staggered scalar -->
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="phi-scalar" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>
    
    <BasicExpression type="XVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="phi-x-scalar" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>
    
    <BasicExpression type="YVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="phi-y-scalar" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>

    <BasicExpression type="ZVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="phi-z-scalar" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>

    <!-- CREATE AN EXPRESSION FOR THE VELOCITY FIELD -->
    <BasicExpression type="XVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="advective-velocity-x" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>
    
    <!-- CREATE AN EXPRESSION FOR THE VELOCITY FIELD -->
    <BasicExpression type="YVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="advective-velocity-y" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>
    
    <!-- CREATE AN EXPRESSION FOR THE VELOCITY FIELD -->
    <BasicExpression type="ZVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="advective-velocity-z" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>

    <!-- Build a non-staggered scalar transport equation -->
    <TransportEquation equation="generic">

      <SolutionVariable>phi-scalar</SolutionVariable>
      <DiffusiveFluxExpression>
        <Direction>X</Direction>
        <ConstantDiffusivity>1.0</ConstantDiffusivity>
      </DiffusiveFluxExpression>

      <DiffusiveFluxExpression>
        <Direction>Y</Direction>
        <ConstantDiffusivity>1.0</ConstantDiffusivity>
      </DiffusiveFluxExpression>

      <DiffusiveFluxExpression>
        <Direction>Z</Direction>
        <ConstantDiffusivity>1.0</ConstantDiffusivity>
      </DiffusiveFluxExpression>

    </TransportEquation>
    
    <!-- Build an x-staggered scalar transport equation -->
    <TransportEquation equation="generic">
    
      <StaggeredDirection>X</StaggeredDirection>
    
      <SolutionVariable>phi-x-scalar</SolutionVariable>
      
      <DiffusiveFluxExpression>
        <Direction>X</Direction>
        <ConstantDiffusivity>1.0</ConstantDiffusivity>
      </DiffusiveFluxExpression>

      <DiffusiveFluxExpression>
        <Direction>Y</Direction>
        <ConstantDiffusivity>1.0</ConstantDiffusivity>
      </DiffusiveFluxExpression>

      <DiffusiveFluxExpression>
        <Direction>Z</Direction>
        <ConstantDiffusivity>1.0</ConstantDiffusivity>
      </DiffusiveFluxExpression>

    </TransportEquation>

    <!-- Build a y-staggered scalar transport equation -->
    <TransportEquation equation="generic">
    
      <StaggeredDirection>Y</StaggeredDirection>
    
      <SolutionVariable>phi-y-scalar</SolutionVariable>
      
      <DiffusiveFluxExpression>
        <Direction>X</Direction>
        <ConstantDiffusivity>1.0</ConstantDiffusivity>
      </DiffusiveFluxExpression>

      <DiffusiveFluxExpression>
        <Direction>Y</Direction>
        <ConstantDiffusivity>1.0</ConstantDiffusivity>
      </DiffusiveFluxExpression>

      <DiffusiveFluxExpression>
        <Direction>Z</Direction>
        <ConstantDiffusivity>1.0</ConstantDiffusivity>
      </DiffusiveFluxExpression>

    </TransportEquation>

    <!-- Build a z-staggered scalar transport equation -->
    <TransportEquation equation="generic">
    
      <StaggeredDirection>Z</StaggeredDirection>
    
      <SolutionVariable>phi-z-scalar</SolutionVariable>
      
      <DiffusiveFluxExpression>
        <Direction>X</Direction>
        <ConstantDiffusivity>1.0</ConstantDiffusivity>
      </DiffusiveFluxExpression>

      <DiffusiveFluxExpression>
        <Direction>Y</Direction>
        <ConstantDiffusivity>1.0</ConstantDiffusivity>
      </DiffusiveFluxExpression>

      <DiffusiveFluxExpression>
        <Direction>Z</Direction>
        <ConstantDiffusivity>1.0</ConstantDiffusivity>
      </DiffusiveFluxExpression>

    </TransportEquation>

  </Wasatch>


  <Time>
    <maxTime>0.0002</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.00005</delt_min>
    <delt_max>0.00005</delt_max>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>


  <DataArchiver>
    <filebase>boundary-conditions-test-rk3.uda</filebase>
    <outputTimestepInterval>2</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle = "2" interval = "0.0001"/>
    <compression>gzip</compression>
    <save label="phi-scalar"/>
    <save label="phi-x-scalar"/>
    <save label="phi-y-scalar"/>
    <save label="phi-z-scalar"/>
  </DataArchiver> 

  <Grid>
      <BoundaryConditions>
      
      <!-- BOUNDARY CONDITIONS FOR NON-STAGGERED SCALAR -->
      <Face side="x-">
        <BCType id="all" var="Dirichlet" label="phi-scalar">
          <value> 10.0 </value>
        </BCType>
      </Face>
      <Face side="x+">
        <BCType id="all" var="Dirichlet" label="phi-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>
      <Face side="y-">
        <BCType id="all" var="Neumann" label="phi-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>
      <Face side="y+">
        <BCType id="all" var="Neumann" label="phi-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>
      <Face side="z-">
        <BCType id="all" var="Neumann" label="phi-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>
      <Face side="z+">
        <BCType id="all" var="Neumann" label="phi-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>
      
      <!-- BOUNDARY CONDITIONS FOR X-STAGGERED SCALAR -->
      <Face side="x-">
        <BCType id="all" var="Dirichlet" label="phi-x-scalar">
          <value> 10.0 </value>
        </BCType>
      </Face>
      <Face side="x+">
        <BCType id="all" var="Dirichlet" label="phi-x-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>
      <Face side="y-">
        <BCType id="all" var="Dirichlet" label="phi-x-scalar">
          <value> 10.0 </value>
        </BCType>
      </Face>
      <Face side="y+">
        <BCType id="all" var="Dirichlet" label="phi-x-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>
      <Face side="z-">
        <BCType id="all" var="Neumann" label="phi-x-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>
      <Face side="z+">
        <BCType id="all" var="Neumann" label="phi-x-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>

      <!-- BOUNDARY CONDITIONS FOR Y-STAGGERED SCALAR -->
      <Face side="x-">
        <BCType id="all" var="Dirichlet" label="phi-y-scalar">
          <value> 10.0 </value>
        </BCType>
      </Face>
      <Face side="x+">
        <BCType id="all" var="Dirichlet" label="phi-y-scalar">
          <value> 10.0 </value>
        </BCType>
      </Face>
      <Face side="y-">
        <BCType id="all" var="Dirichlet" label="phi-y-scalar">
          <value> 10.0 </value>
        </BCType>
      </Face>
      <Face side="y+">
        <BCType id="all" var="Dirichlet" label="phi-y-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>
      <Face side="z-">
        <BCType id="all" var="Neumann" label="phi-y-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>
      <Face side="z+">
        <BCType id="all" var="Neumann" label="phi-y-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>

      <!-- BOUNDARY CONDITIONS FOR Z-STAGGERED SCALAR -->
      <Face side="x-">
        <BCType id="all" var="Dirichlet" label="phi-z-scalar">
          <value> 10.0 </value>
        </BCType>
      </Face>
      <Face side="x+">
        <BCType id="all" var="Dirichlet" label="phi-z-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>
      <Face side="y-">
        <BCType id="all" var="Neumann" label="phi-z-scalar">
          <value> 10.0 </value>
        </BCType>
      </Face>
      <Face side="y+">
        <BCType id="all" var="Neumann" label="phi-z-scalar">
          <value> -10.0 </value>
        </BCType>
      </Face>
      <Face side="z-">
        <BCType id="all" var="Dirichlet" label="phi-z-scalar">
          <value> 10.0 </value>
        </BCType>
      </Face>
      <Face side="z+">
        <BCType id="all" var="Dirichlet" label="phi-z-scalar">
          <value> 0.0 </value>
        </BCType>
      </Face>


    </BoundaryConditions>

    <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[1,1,1]</upper>
        <resolution>[12,12,12]</resolution>
        <patches>[1,1,1]</patches>
      </Box>
      <periodic>[0,0,0]</periodic>
    </Level>
  </Grid>

</Uintah_specification>

<?cocoon-process type="xslt"?>
<component name="GradientAnisotropicDiffusionImageFilter" category="Filters">
  <overview>
    <authors>
    </authors>
    <summary>    
  This filter performs anisotropic diffusion on a scalar itk::Image using the classic Perona-Malik, gradient magnitude based equation implemented in itkGradientNDAnisotropicDiffusionFunction.
    </summary>
  </overview>
  <implementation>
  </implementation>
  <io>
    <inputs lastportdynamic="no">  
      <port>
        <name>InputImage</name>
        <datatype>Insight::ITKDatatype</datatype>
      </port>
    </inputs>
    <outputs>  
      <port>
        <name>OutputImage</name>
        <datatype>Insight::ITKDatatype</datatype>
      </port>
    </outputs>
  </io>
</component>








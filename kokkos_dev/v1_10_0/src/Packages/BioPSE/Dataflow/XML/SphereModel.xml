<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE component SYSTEM "../../../../../doc/Utilities/XML/component.dtd">

<component name="SphereModel" category="Forward">
  <overview>

    <authors>
      <author>Sascha Moehrs</author>
    </authors>

	<summary>Build a discrete unit sphere from a unit volume</summary>

    <description>
      <p>Date: January 2003; Version: 1.0</p>
	  <p>The module takes a HexVolField, which covers the unit volume, as input
         and creates a new mesh, which contains only those cells belonging to
         the unit sphere.
      </p>
    </description>

  </overview>

  <io>

    <inputs lastportdynamic="no">
      <port>
        <name>HexVolField</name>
		<description> unit volume</description>
		<datatype>SCIRun::Field</datatype>
      </port>
    </inputs>

    <outputs>
      <port>
        <name>HexVolField</name>
		<description> unit sphere </description>
		<datatype>SCIRun::Field</datatype>
      </port>
	  
    </outputs>
  </io>

  <gui>
	
  </gui>
  
</component>

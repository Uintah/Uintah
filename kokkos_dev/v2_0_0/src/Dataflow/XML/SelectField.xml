<component name="SelectField" category="FieldsOther">
  <overview>
    <authors>
      <author>Michael Callahan</author>
    </authors>
    <summary>Select data from a field.</summary>
    <description>
      <p>
        This module allows the user to paint values into a field using
        a selection widget.  The output field contains integer values
        that correspond to the values selected in the GUI when the
        painting was done.
      </p>
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
	<name>Input Field</name>
	<datatype>SCIRun::Field</datatype>
      </port>
    </inputs>
    <outputs>
      <port>
	<name>Selection Widget</name>
	<datatype>SCIRun::Geometry</datatype>
      </port>
      <port>
	<name>Output Field</name>
	<datatype>SCIRun::Field</datatype>
      </port>
    </outputs>
  </io>
  <testing>
  </testing>
</component>

<filter-itk name="itk::WatershedImageFilter">

  <description>
  A low-level image analysis algorithm that automatically produces 
  a hierarchy of segmented, labeled images from a scalar-valued image input.
  </description>
  <templated>
    <template>InputImageType</template>
    <defaults>
      <default>itk::Image&lt;float, 2&gt;</default>
    </defaults>
    <defaults>
      <default>itk::Image&lt;float, 3&gt;</default>
    </defaults>
  </templated>

  <inputs>
    <input name="InputImage">
      <type>InputImageType</type>
      <call>SetInput</call>
    </input>  
  </inputs>
  <outputs>
    <output name="OutputImage">
      <type>itk::Image&lt; unsigned long, InputImageType::VImageDimension &gt;</type>
      <call>GetOutput</call>
    </output>
  </outputs>

  <parameters>
    <param>
      <name>threshold</name>
      <type>double</type>
      <call>SetThreshold</call>
      <default>0.1</default>
    </param>
    <param>
      <name>level</name>
      <type>double</type>
      <call>SetLevel</call>
      <default>0.01</default>
    </param>
  </parameters>
  <includes>
    <file>itkWatershedImageFilter.h</file>
  </includes>
</filter-itk>


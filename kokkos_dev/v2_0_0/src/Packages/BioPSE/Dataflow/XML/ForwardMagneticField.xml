<component name="ForwardMagneticField" category="Forward">
  <overview>
    <authors>
      <author>Robert Van Uitert</author>
    </authors>
    <summary>Calculation of magnetic field at given detector points due to specificed dipoles. </summary>
    <description>
      The modules calculates the magnetic field due to given dipoles at specified detector positions based on the Biot-Savart law.
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <!-- one of (device port file) -->
      <port>
	<name>Electric Field</name>
	<description>
	  <p>Takes a handle to the field containing the electric field in the same geometry as the Conductivity Tensors port.</p>
	</description>
	<datatype>SCIRun::Field</datatype>
      </port>
      <port>
	<name>Conductivity Tensors</name>
	<description>
	  <p>Takes a handle to the field containing the conductivity tensors of the geometry.</p>
	</description>
	<datatype>SCIRun::Field</datatype>
      </port>
      <port>
	<name>Dipole Sources</name>
	<description>
	  <p>Takes a handle to the field containing dipole positions and
	  their moment values</p>
	</description>
	<datatype>SCIRun::Field</datatype>
      </port>
      <port>
	<name>Detector Locations</name>
	<description>
	  <p>Takes a handle to the field containing detector positions and
	  their normalized orientations</p>
	</description>
	<datatype>SCIRun::Field</datatype>
      </port>
    </inputs>

    <outputs>
      <!-- one of (device port file) -->
      <port>
	<name>Magnetic Field</name>
	<description>
	  <p>Output Magnetic Field at detector point. PointCloud of Vectors.</p>
	</description>
	<datatype>SCIRun::Field</datatype>
      </port>
      <port>
        <name>Magnitudes</name>
	<description>
	  <p>Magnitudes of magnetic field in the detector directions.</p>
	</description>
	<datatype>SCIRun::Field</datatype>
      </port>
    </outputs>
  </io>
  
  <testing>
  </testing>
</component>

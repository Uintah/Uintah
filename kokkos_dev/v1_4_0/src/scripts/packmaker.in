#!/bin/tcsh -fx

set srcloc=$1
set pkg=$2

echo "SCIRUN_SRCTOP = REPLACE_SCIRUN_SRCTOP" > Makefile
echo "SCIRUN_OBJTOP = REPLACE_SCIRUN_OBJTOP" >> Makefile
echo 'SCIRUN_SCRIPTS = $(SCIRUN_SRCTOP)/scripts' >> Makefile
echo "" >> Makefile
echo "MYPKG     = $pkg" >> Makefile
echo "SRCTOP     = $srcloc" >> Makefile
echo "SRCTOP_ABS = $srcloc" >> Makefile
echo "OBJTOP     = ./" >> Makefile
echo 'OBJTOP_ABS = $(shell cd $(OBJTOP) ; pwd)' >> Makefile
echo "" >> Makefile
echo "include REPLACE_SCIRUN_OBJTOP/disjointPackageMakefile" >> Makefile
echo "#this file is to define variables needed by the local package make" > localdefs.mk

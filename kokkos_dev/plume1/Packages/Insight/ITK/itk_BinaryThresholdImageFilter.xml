<filter-itk name="itk::BinaryThresholdImageFilter">
  <description>
This filter produces an output image whose pixels are either one of two values ( OutsideValue or InsideValue ), depending on whether of not the corresponding input image pixel lie between the two thresholds ( LowerThreshold and UpperThreshold ). Values equal to either threshold is considered to be between the thresholds.
  </description>
  <templated>
    <template>InputImageType</template>
    <template>OutputImageType</template>
    <defaults>
      <default>itk::Image&lt;float, 2&gt;</default>
      <default>itk::Image&lt;float, 2&gt;</default>
    </defaults>
    <defaults>
      <default>itk::Image&lt;float, 3&gt;</default>
      <default>itk::Image&lt;float, 3&gt;</default>
    </defaults>
  </templated>

  <inputs>
    <input name="InputImage">
      <type>InputImageType</type>
      <call>SetInput</call>
    </input>  
  </inputs>
  <outputs>
    <output name="OutputImage">
      <type>OutputImageType</type>
      <call>GetOutput</call>
    </output>
  </outputs>

  <parameters>
    <param>
      <name>lower_threshold</name>
      <type>float</type>
      <call>SetLowerThreshold</call>
      <default>0.0</default>
    </param>
    <param>
      <name>upper_threshold</name>
      <type>float</type>
      <call>SetUpperThreshold</call>
      <default>1.0</default>
    </param>
    <param>
      <name>inside_value</name>
      <type>float</type>
      <call>SetInsideValue</call>
      <default>1</default>
    </param>
    <param>
      <name>outside_value</name>
      <type>float</type>
      <call>SetOutsideValue</call>
      <default>0</default>
    </param>
  </parameters>


  <includes>
    <file>itkBinaryThresholdImageFilter.h</file>
  </includes>
</filter-itk>

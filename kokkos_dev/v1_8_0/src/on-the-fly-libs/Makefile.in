# Makefile for field manipulation code that is compiled and loaded on the fly

# Default target
default: all

include @abs_conftop_dir@/configVars.mk
SCIRUN_SRCTOP       := @abs_srcdir@
SCIRUN_OBJTOP       := @abs_conftop_dir@
LIBDIR	            := $(SCIRUN_OBJTOP)/lib/

INCLUDES = -I$(SCIRUN_SRCTOP)/include -I$(SCIRUN_SRCTOP) -I$(SCIRUN_OBJTOP) -I$(SCIRUN_SRCTOP)/Packages @INC_TCL_H@ @INC_TK_H@ @INC_ITCL_H@ @INC_BLT_H@ @INC_GLOBUS_H@ @INC_XERCESC_H@ @INC_PETSC_H@ $(TAU_INCLUDE) $(MPI_INCLUDE)

ifeq ($(SSTREAM_COMPAT),yes)
INCLUDES := $(INCLUDES) -I$(SCIRUN_SRCTOP)/include/compat
endif
INCLUDES := $(sort $(INCLUDES))

SOFLAGS         := @SOFLAGS@  $(CFLAGS)

SRCS = $(wildcard *.cc)
OTF_LIBS := $(patsubst %.cc,%.so, $(SRCS))


ifeq ($(NEED_SONAME),yes)
SONAMEFLAG = -Wl,-soname,$(notdir $@)
else
SONAMEFLAG = 
endif

ifneq ($(MAKECMDGOALS),)
include $(MAKECMDGOALS:so=d)
else
include $(SRCS:.cc=.d)
endif
.SECONDARY:

.PHONY: all
all: $(OTF_LIBS)

%.d: %.cc
	set -e; $(CXX) -M $(CFLAGS) $(INCLUDES) $< \
          | sed 's/\($*\)\.o[ :]*/\1.o $@ : /g' > $@; \
          [ -s $@ ] || rm -f $@

%.o : %.cc %.d
	$(CXX) -c $(CFLAGS) $(INCLUDES) $< -o $@ 

%.so : %.o 
	rm -f $@
	$(CXX) $(CFLAGS) $(INCLUDES) $(SOFLAGS) $< -o $@ 



<component name="TexCuttingPlanes" category="Visualization">
  <overview>
    <authors>
      <author>Kurt Zimmerman</author>
    </authors>
    <summary>View slices of a volume.</summary>
    <description>
      <p>You can select the X,Y,Z or View plane and use the "+" and
      "-" buttons to move the cutting planes.</p>
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>GL Texture</name>
	<datatype>SCIRun::GLTexture3D</datatype>
      </port>
      <port>
        <name>ColorMap</name>
	<datatype>SCIRun::ColorMap</datatype>
      </port>
    </inputs>
    <outputs>
      <port>
        <name>Geometry</name>
        <datatype>SCIRun::Geometry</datatype>
      </port>
      <port>
	<name>ColorMap</name>
	<datatype>SCIRun::ColorMap</datatype>
      </port>
    </outputs>
 </io>
  <gui>
    <img>../Modules/Visualization/doc/TexCuttingPlanesUI.jpg</img>
  </gui>
  <testing>
  </testing>
</component>

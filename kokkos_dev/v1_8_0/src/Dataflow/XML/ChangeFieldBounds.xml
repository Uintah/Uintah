<component name="ChangeFieldBounds" category="Fields">
  <overview>
    <authors>
      <author>McKay Davis</author>
    </authors>
    <summary>
      <p>
        ChangeFieldBounds is used to transform the field geometry.
      </p>
    </summary>
    <description>
      <p>
        ChangeFieldBounds can change the field geometry via the UI or 
	a widget attached to a Viewer window.
      </p>
    </description>
  </overview>
  <implementation>
  </implementation>
  <io>
    <inputs lastportdynamic="no">
      <port>
        <name>Input Field</name>
        <datatype>SCIRun::Field</datatype>
	<description>
          <p>
            The field to be transformed.
          </p>
        </description>
      </port>
    </inputs>
    <outputs>
      <port>
        <name>Output Field</name>
        <datatype>SCIRun::Field</datatype>
        <description>
          <p>
            The transformed field.
          </p>
        </description>
      </port>
      <port>
        <name>Transformation Widget</name>
        <datatype>SCIRun::Geometry</datatype>
        <description>
          <p>
            A box widget used to translate and/or resize the field.
          </p>
        </description>
      </port>
      <port>
        <name>Transformation Matrix</name>
        <datatype>SCIRun::Matrix</datatype>
        <description>
          <p>
            The matrix that represents the transformations made.
          </p>
        </description>
      </port>
    </outputs>
  </io>
  <gui>
    <description>
      <p>
      </p>
    </description>
    <parameter>
      <widget>Entry</widget>
      <label>BBox min and BBox max</label>
      <description>
        <p>
          The 6 entries describe two 3D points, which are the min and
          max points of the axis aligned bounding box of the field.
        </p>
      </description>
    </parameter>
  </gui>
  <testing>
  </testing>
</component>


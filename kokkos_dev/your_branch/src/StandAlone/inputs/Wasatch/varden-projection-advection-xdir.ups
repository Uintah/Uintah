<Uintah_specification>

  <Meta>
    <title>Pressure Projection Test with a 1D Convective Case in x-direction</title>
  </Meta>

  <SimulationComponent type="wasatch"/>
   <Solver type="hypre" />
  <Wasatch>
    <TimeIntegrator> FE </TimeIntegrator>    

    
    <Density>
      <IsConstant>false</IsConstant>
      <NameTag name="density" state="CARRY_FORWARD" />
    </Density>
    
    <!-- Set the initial condition expression for mixture fraction -->
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="f" state="STATE_NONE" />
      <GaussianFunction amplitude="1.0" deviation="1.0" mean="0.0" baseline="0.0">
        <NameTag name="XSVOL" state="STATE_NONE" />
      </GaussianFunction> 
    </BasicExpression>
    
    <!-- Set up a tabular property evaluation to extract density for initialization-->
    <TabProps>
      <FileNamePrefix>inputs/Wasatch/NonReacting_PP_MMS</FileNamePrefix>
      <TaskList>initialization</TaskList>
      
      <IndependentVariable>
        <NameTag name="f" state="STATE_NONE" />
        <NameInTable>MixtureFraction</NameInTable>
      </IndependentVariable>
      
      <ExtractDensity>
        <NameTag name="density" state="STATE_NONE" />
      </ExtractDensity>

    </TabProps>
    
    <!-- Set up a tabular property evaluation to extract density within the advance_solution-->
    <TabProps>
      <FileNamePrefix>inputs/Wasatch/NonReacting_PP_MMS</FileNamePrefix>
      <TaskList>advance_solution</TaskList>
      
      <IndependentVariable>
        <NameTag name="f" state="STATE_NONE" />
        <NameInTable>MixtureFraction</NameInTable>
      </IndependentVariable>
      
      <ExtractDensity>
        <NameTag name="density" state="CARRY_FORWARD" />
        <DensityWeightedIVar>
          <NameTag name="rhof" state="STATE_N" />
          <RelatedIVar>
            <NameTag name="f" state="STATE_NONE" />
          </RelatedIVar>
        </DensityWeightedIVar>
      </ExtractDensity>
      
    </TabProps>  
    
    <!-- Set the initial condition expression for x-velocity -->
    <BasicExpression type="XVOL">
       <TaskList>initialization</TaskList>
       <NameTag name="u" state="STATE_NONE" />
       <Constant>1.0</Constant>
    </BasicExpression>
    
        
    <!-- Build a scalar transport equation for mixture fraction -->
    <TransportEquation equation="generic">

      <SolutionVariable>rhof</SolutionVariable>
      <StrongForm>true</StrongForm>
      <PrimitiveVariable>f</PrimitiveVariable>
      
      <ConvectiveFluxExpression>
        <Method>CENTRAL</Method> 
        <Direction>X</Direction>
        <AdvectiveVelocity>
            <NameTag name="u" state="STATE_NONE"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

    </TransportEquation>   
    
    <ForceOnGraph tasklist="advance_solution">
        <NameTag name="f" state="STATE_NONE" />
    </ForceOnGraph>
    
    <FieldClipping tasklist="advance_solution">
      <FieldExpression type ="SVOL" min="0.0" max="1.0">
        <NameTag name="f" state="STATE_NONE"/>        
      </FieldExpression>                    
    </FieldClipping>
      
    <BasicExpression type="SVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="viscosity" state="STATE_NONE" />
      <Constant>0.0</Constant>
    </BasicExpression>
        
    <!-- Momentum transport equations -->
    <MomentumEquations>
      <X-Velocity>u</X-Velocity>
      <X-Momentum>x-mom</X-Momentum>
         
      <Viscosity>
        <NameTag name="viscosity" state="STATE_NONE" />
      </Viscosity>
      
      <Pressure>
        <Use3DLaplacian>   false</Use3DLaplacian>

        <Parameters>
 	 	 	 	 	 	 <setupFrequency>0</setupFrequency>
 	 	 	 	 	 	 <skip>1</skip>
            <solver>         cg      </solver>
            <preconditioner> pfmg    </preconditioner>
            <tolerance>      1e-12  </tolerance>
            <maxiterations>  1000   </maxiterations>
            <relax_type>     2       </relax_type>
           </Parameters>

      </Pressure>
    </MomentumEquations>

  </Wasatch>


  <Time>
    <maxTime>5.0</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.001</delt_min>
    <delt_max>0.001</delt_max>
    <max_Timesteps> 100 </max_Timesteps>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>


  <DataArchiver>
    <filebase>PPtest.uda</filebase>
    <outputTimestepInterval>1</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle = "2" interval = "0.001"/>
    <compression>gzip</compression>
    <save label="density"/>
    <save label="x-mom"/>
    <save label="x-mom_rhs_partial"/>
    <save label="u"/>
    <save label="u_*"/>
    <save label="f"/>
    <save label="rhof"/>
    <save label="pressure"/>
    <save label="pressure_old"/>
    <save label="pressure-source-term"/>
  </DataArchiver> 

  <Grid>

      <BoundaryConditions>
      <!-- BOUNDARY CONDITIONS FOR MOMENTUM -->

      <Face side="x-">

        <BCType id="all" var="Dirichlet" label="pressure">
          <value> 0.0 </value>
        </BCType>                       

        <BCType id="all" var="Neumann" label="x-mom">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="u">
          <value> 0.0 </value>
        </BCType>          
                
        <BCType id="all" var="Neumann" label="rhof">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="f">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="density">
          <value> 0.0 </value>
        </BCType>
                
        <BCType id="all" var="Dirichlet" label="x-mom_rhs_partial">
          <value> 0.0 </value>
        </BCType>      

      </Face>

      <Face side="x+">

        <BCType id="all" var="Dirichlet" label="pressure">
          <value> 0.0 </value>
        </BCType>                       

        <BCType id="all" var="Neumann" label="x-mom">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="u">
          <value> 0.0 </value>
        </BCType>          
        
        <BCType id="all" var="Neumann" label="rhof">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="f">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Neumann" label="density">
          <value> 0.0 </value>
        </BCType>

        <BCType id="all" var="Dirichlet" label="x-mom_rhs_partial">
          <value> 0.0 </value>
        </BCType>      

      </Face>

      </BoundaryConditions>  

      <Level>
      <Box label="1">
        <lower>[-15,0,0]</lower>
        <upper>[15,1,1]</upper>
        <resolution>[256,2,2]</resolution>
        <patches>[9,1,1]</patches>
      </Box>
      <periodic>[0,1,1]</periodic>
    </Level>
  </Grid>

</Uintah_specification>

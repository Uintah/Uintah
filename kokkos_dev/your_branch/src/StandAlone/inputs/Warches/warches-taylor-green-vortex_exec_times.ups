<?xml version="1.0" encoding="iso-8859-1"?>
<!-- DOCTYPE Uintah_specification SYSTEM "input.dtd" -->
<!-- @version: -->
<Uintah_specification>
  <Meta>
    <title>Arches "2D" Periodic Box Almgren MMS </title>
  </Meta>

  <SimulationComponent type="arches"/>

  <Solver type="hypre"/>
  <Time>
    <maxTime>0.1</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.00001</delt_min>
    <delt_max>0.01</delt_max>
    <timestep_multiplier>0.5</timestep_multiplier>
  </Time>

  <DataArchiver>
    <filebase>taylor-green-vortex.uda</filebase>
    <outputInterval>0.01</outputInterval>
    <checkpoint cycle="0" interval="0"/>
    <compression>gzip</compression>
  </DataArchiver>

  <Grid>
    <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[1.0,1.0,3.0]</upper>
        <resolution>[32,32,2]</resolution>
        <extraCells>[0,0,0]</extraCells>
        <patches>[2,2,1]</patches>
      </Box>
      <periodic>[1,1,1]</periodic>
    </Level>
  </Grid>

  <PhysicalConstants>
    <gravity>[0,0,0]</gravity>
    <reference_point>[0,0,0]</reference_point>
    <viscosity>0.0002</viscosity>
  </PhysicalConstants>

  <CFD>
<!-- ARCHES specification -->
    <ARCHES>

      <TimeIntegrator>
        <ExplicitIntegrator order="first"/>
      </TimeIntegrator>


<!-- 
      <MMS whichMMS="almgrenMMS">
        <mmsErrorType>L2</mmsErrorType>
        <almgrenMMS>
<!~~Note: This viscosity needs to be set twice for now, both here
                    and in the PhysicalConstant section. ~~>
          <viscosity>0.0002</viscosity>
          <amplitude>1.0</amplitude>
        </almgrenMMS>
      </MMS>
 -->

      <Properties>
        <ConstantProps>
          <density>1.0</density>
          <temperature>298</temperature>
        </ConstantProps>
      </Properties>

      <ExplicitSolver>
        <initial_dt>1</initial_dt>
        <variable_dt>true</variable_dt>
        <PressureSolver>
          <Parameters>
            <solver>           cg     </solver>
            <preconditioner>  pfmg    </preconditioner>
            <tolerance>      1.0e-10  </tolerance>
            <maxiterations>    75     </maxiterations>
            <skip>              1     </skip>
            <setupFrequency>    0     </setupFrequency>
            <jump>              0     </jump>
          </Parameters>
        </PressureSolver>

        <MomentumSolver>
          <use_wasatch_momentum_rhs/>        
          <convection_scheme>central</convection_scheme>
          <initialization type="almgren">
            <A>1</A>
            <B>1</B>
            <plane>x-y</plane>
          </initialization>          
        </MomentumSolver>

      </ExplicitSolver>
    </ARCHES>

  </CFD>
     <Wasatch>

    <Density>
      <IsConstant>true</IsConstant>
      <NameTag name="densityCP" state="STATE_NONE"/>
    </Density>

    </Wasatch>

</Uintah_specification>

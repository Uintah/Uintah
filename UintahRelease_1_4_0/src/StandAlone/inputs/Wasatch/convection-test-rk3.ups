<Uintah_specification>

  <Meta>
    <title>Test upwind convection</title>
  </Meta>

  <SimulationComponent type="wasatch"/>

  <Wasatch>

    <Density>
      <IsConstant>true</IsConstant>
    </Density>

   <TimeIntegrator>RK3SSP</TimeIntegrator>

    <!-- Set the initial condition for non-staggered scalar -->
    <BasicExpression type="SVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="phi0-scalar" state="STATE_N" />
      <SineFunction amplitude="10.0" frequency="1.0" offset="0.0">
         <NameTag name="XSVOL" state="STATE_NONE" />
       </SineFunction>
    </BasicExpression>

    <!-- Set the initial condition for an x-staggered scalar -->
    <BasicExpression type="XVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="phi1-scalar" state="STATE_N" />
      <SineFunction amplitude="1.0" frequency="10.0" offset="0.0">
        <NameTag name="XXVOL" state="STATE_NONE" />
      </SineFunction>
    </BasicExpression>

    <!-- Set the initial condition for a y-staggered scalar -->
    <BasicExpression type="YVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="phi2-scalar" state="STATE_N" />
      <SineFunction amplitude="1.0" frequency="10.0" offset="0.0">
        <NameTag name="XYVOL" state="STATE_NONE" />
      </SineFunction>
    </BasicExpression>

    <!-- Set the initial condition for the z-staggered scalar -->
    <BasicExpression type="ZVOL">
      <TaskList>initialization</TaskList>
      <NameTag name="phi3-scalar" state="STATE_N" />
      <SineFunction amplitude="1.0" frequency="10.0" offset="0.0">
        <NameTag name="XZVOL" state="STATE_NONE" />
      </SineFunction>
    </BasicExpression>
    
    <!-- CREATE AN EXPRESSION FOR THE VELOCITY FIELD -->
    <BasicExpression type="XVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="advective-velocity-x" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>
    
    <!-- CREATE AN EXPRESSION FOR THE VELOCITY FIELD -->
    <BasicExpression type="YVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="advective-velocity-y" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>
    
    <!-- CREATE AN EXPRESSION FOR THE VELOCITY FIELD -->
    <BasicExpression type="ZVOL">
      <TaskList>advance_solution</TaskList>
      <NameTag name="advective-velocity-z" state="STATE_N" />
      <Constant>1.0</Constant>
    </BasicExpression>
    
    <!-- Build a non-staggered scalar transport equation -->
    <TransportEquation equation="generic">

      <SolutionVariable>phi0-scalar</SolutionVariable>
      <StrongForm>true</StrongForm>

      <ConvectiveFluxExpression>
        <Method>UPWIND</Method> 
        <Direction>X</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-x" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

      <ConvectiveFluxExpression>
        <Method>UPWIND</Method>
        <Direction>Y</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-y" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

      <ConvectiveFluxExpression>
        <Method>UPWIND</Method>
        <Direction>Z</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-z" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

    </TransportEquation>

    <!-- Build an x-staggered scalar transport equation -->
    <TransportEquation equation="generic">

      <SolutionVariable>phi1-scalar</SolutionVariable>
      <StrongForm>true</StrongForm>

      <StaggeredDirection>X</StaggeredDirection>

      <ConvectiveFluxExpression>
        <Method>UPWIND</Method> 
        <Direction>X</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-x" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

      <ConvectiveFluxExpression>
        <Method>UPWIND</Method>
        <Direction>Y</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-y" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

      <ConvectiveFluxExpression>
        <Method>UPWIND</Method>
        <Direction>Z</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-z" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

    </TransportEquation>

    <!-- Build a y-staggered scalar transport equation -->
    <TransportEquation equation="generic">

      <SolutionVariable>phi2-scalar</SolutionVariable>
      <StrongForm>true</StrongForm>

      <StaggeredDirection>Y</StaggeredDirection>

      <ConvectiveFluxExpression>
        <Method>UPWIND</Method> 
        <Direction>X</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-x" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

      <ConvectiveFluxExpression>
        <Method>UPWIND</Method>
        <Direction>Y</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-y" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

      <ConvectiveFluxExpression>
        <Method>UPWIND</Method>
        <Direction>Z</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-z" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

    </TransportEquation>

    <!-- Build a z-staggered scalar transport equation -->
    <TransportEquation equation="generic">

      <SolutionVariable>phi3-scalar</SolutionVariable>
      <StrongForm>true</StrongForm>

      <StaggeredDirection>Z</StaggeredDirection>

      <ConvectiveFluxExpression>
        <Method>UPWIND</Method> 
        <Direction>X</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-x" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

      <ConvectiveFluxExpression>
        <Method>UPWIND</Method>
        <Direction>Y</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-y" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

      <ConvectiveFluxExpression>
        <Method>UPWIND</Method>
        <Direction>Z</Direction>
        <AdvectiveVelocity>
            <NameTag name="advective-velocity-z" state="STATE_N"/>
        </AdvectiveVelocity>
      </ConvectiveFluxExpression>

    </TransportEquation>

  </Wasatch>


  <Time>
    <maxTime>0.5</maxTime>
    <initTime>0.0</initTime>
    <delt_min>0.01</delt_min>
    <delt_max>0.05</delt_max>
    <timestep_multiplier>1.0</timestep_multiplier>
  </Time>


  <DataArchiver>
    <filebase>convection-test-rk3.uda</filebase>
    <outputTimestepInterval>2</outputTimestepInterval>
    <outputInitTimestep/>
    <checkpoint cycle = "2" interval = "0.2"/>
    <compression>gzip</compression>
    <save label="phi0-scalar"/>
    <save label="phi1-scalar"/>
    <save label="phi2-scalar"/>
    <save label="phi3-scalar"/>
  </DataArchiver> 

  <Grid>
    <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[6.283,1,1]</upper>
        <resolution>[60,10,10]</resolution>
        <patches>[3,1,1]</patches>
      </Box>
      <periodic>[1,1,1]</periodic>
    </Level>
  </Grid>

</Uintah_specification>

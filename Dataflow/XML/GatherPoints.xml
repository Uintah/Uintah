<component name="GatherPoints" category="FieldsCreate">
  <overview>
    <authors>
      <author>David Weinstein</author>
    </authors>
    <summary>
      <p>
        GatherPoints is used to collect nodes from many fields into
        one PointCloudField field.
      </p>
    </summary>
    <description>
      <p>
        GatherPoints takes in an arbitrary number of input fields, and
        groups all of their nodes together into a single PointCloudField
        field.
      </p>
    </description>
  </overview>
  <io>
    <inputs lastportdynamic="yes">
     <port>
       <name>Field</name>
       <datatype>SCIRun::Field</datatype>
     </port>
    </inputs>
    <outputs>
     <port>
       <name>Field</name>
       <datatype>SCIRun::Field</datatype>
     </port>
    </outputs>
  </io>
  <gui>
  </gui>
  <testing>
  </testing>
</component>
